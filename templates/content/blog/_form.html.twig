<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Remplissez les informations
                </div>
                <div class="card-body">
    {{ form_start(form, {'attr': {'class': 'custom-form'}}) }}
    <div class="form-group">
        {{ form_row(form.title_one, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
    {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
</div>
    <div class="form-group">
        {{ form_row(form.publishedAt, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.author, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.content_one, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.title_two, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.content_two, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.title_tree, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.content_tree, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.sous_title_tree, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.sous_content_tree, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.title_for, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.content_for, {'attr': {'class': 'form-control'}}) }}
    </div>
    <!-- Répétez pour les autres champs -->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>