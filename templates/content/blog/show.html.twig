{% extends 'base.html.twig' %}

{% block title %}{{ blog.titleOne }} - Blog INFPF{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #0b3f89;
            --secondary-color: #1e40af;
            --accent-color: #3b82f6;
            --light-gray: #f8fafc;
            --border-radius: 20px;
            --box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
            --shadow-light: 0 10px 25px rgba(0, 0, 0, 0.08);
            --shadow-heavy: 0 25px 60px rgba(0, 0, 0, 0.15);
            --primary-gradient: linear-gradient(135deg, #0b3f89 0%, #1e5cb8 100%);
            --accent-gradient: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
            --transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 50%, #cbd5e1 100%);
            color: #1e293b;
            line-height: 1.7;
            overflow-x: hidden;
        }

        /* Hero Header moderne */
        .blog-hero {
            position: relative;
            background: var(--primary-gradient);
            padding: 120px 0 80px;
            overflow: hidden;
            min-height: 60vh;
            display: flex;
            align-items: center;
        }

        .blog-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            z-index: 1;
        }

        .blog-hero::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 100px;
            background: linear-gradient(to bottom, transparent, rgba(241, 245, 249, 0.3));
            z-index: 2;
        }

        .hero-content {
            position: relative;
            z-index: 3;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
            text-align: center;
        }

        .hero-breadcrumb {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            color: rgba(255, 255, 255, 0.9);
            font-weight: 500;
            margin-bottom: 2rem;
            transition: var(--transition);
        }

        .hero-breadcrumb:hover {
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-2px);
        }

        .hero-title {
            font-size: clamp(2.5rem, 5vw, 4rem);
            font-weight: 800;
            color: white;
            margin-bottom: 1.5rem;
            line-height: 1.1;
            text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }

        .hero-meta {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 2rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .hero-meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(255, 255, 255, 0.15);
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            color: white;
            font-weight: 600;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        /* Main Content moderne */
        .blog-article-container {
            max-width: 1200px;
            margin: -60px auto 0;
            padding: 0 2rem;
            position: relative;
            z-index: 4;
        }

        .blog-image-featured {
            width: 100%;
            max-width: 900px;
            height: 450px;
            object-fit: cover;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-heavy);
            margin: 0 auto 3rem;
            display: block;
            border: 4px solid white;
            transition: var(--transition);
        }

        .blog-image-featured:hover {
            transform: translateY(-5px);
            box-shadow: 0 35px 70px rgba(0, 0, 0, 0.2);
        }

        .blog-content-main {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: var(--border-radius);
            padding: 4rem;
            margin-bottom: 3rem;
            box-shadow: var(--shadow-light);
            border: 1px solid rgba(255, 255, 255, 0.3);
            position: relative;
        }

        .blog-content-main::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: var(--accent-gradient);
        }

        .blog-meta {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
            color: #64748b;
            font-size: 0.9rem;
        }

        .blog-meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .blog-title {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--primary-color);
            margin: 0;
            line-height: 1.2;
        }

        .blog-image {
            width: 100%;
            height: 400px;
            object-fit: cover;
            border-radius: var(--border-radius);
            margin: 2rem 0;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .blog-content {
            background: white;
            border-radius: var(--border-radius);
            padding: 3rem;
            margin-bottom: 2rem;
            box-shadow: var(--box-shadow);
        }

        .content-section {
            margin-bottom: 3rem;
        }

        .content-section:last-child {
            margin-bottom: 0;
        }

        .section-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 1.5rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid var(--light-gray);
        }

        .section-subtitle {
            font-size: 1.4rem;
            font-weight: 600;
            color: var(--secondary-color);
            margin: 2rem 0 1.5rem 0;
        }

        .content-text {
            font-size: 1.25rem;
            line-height: 1.8;
            color: #374151;
            margin-bottom: 2rem;
            font-weight: 400;
        }

        .comments-section {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: var(--border-radius);
            padding: 4rem;
            box-shadow: var(--shadow-light);
            border: 1px solid rgba(255, 255, 255, 0.3);
            position: relative;
        }

        .comments-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: var(--accent-gradient);
        }

        .comments-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 2.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .comment-form {
            background: linear-gradient(135deg, rgba(248, 250, 252, 0.8), rgba(241, 245, 249, 0.9));
            backdrop-filter: blur(10px);
            padding: 2.5rem;
            border-radius: var(--border-radius);
            margin-bottom: 2rem;
            border: 1px solid rgba(59, 130, 246, 0.1);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .form-control {
            width: 100%;
            padding: 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            transition: var(--transition);
            font-family: inherit;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--accent-color);
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        .comment-textarea {
            min-height: 120px;
            resize: vertical;
        }

        .btn-submit {
            background: var(--primary-gradient);
            color: white;
            border: none;
            padding: 1.25rem 2.5rem;
            border-radius: 50px;
            font-weight: 700;
            cursor: pointer;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 1.1rem;
            position: relative;
            overflow: hidden;
        }

        .btn-submit::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.6s ease;
        }

        .btn-submit:hover::before {
            left: 100%;
        }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(11, 63, 137, 0.4);
        }

        .comment-list {
            space-y: 1.5rem;
        }

        .comment-item {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            padding: 2rem;
            border-radius: var(--border-radius);
            border-left: 4px solid var(--accent-color);
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow-light);
            border: 1px solid rgba(255, 255, 255, 0.5);
            transition: var(--transition);
        }

        .comment-item:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-heavy);
        }

        .comment-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid #e2e8f0;
        }

        .comment-actions {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .btn-delete-comment {
            background: linear-gradient(135deg, #dc2626, #b91c1c);
            color: white;
            border: none;
            padding: 0.6rem 1.2rem;
            border-radius: 6px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-delete-comment:hover {
            background: linear-gradient(135deg, #b91c1c, #991b1b);
            transform: translateY(-1px);
        }

        .btn-reply-comment {
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            color: white;
            border: none;
            padding: 0.6rem 1.2rem;
            border-radius: 6px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-left: 1rem;
        }

        .btn-reply-comment:hover {
            background: linear-gradient(135deg, #2563eb, #1d4ed8);
            transform: translateY(-1px);
        }

        .btn-submit-reply {
            background: linear-gradient(135deg, #059669, #047857);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-submit-reply:hover {
            background: linear-gradient(135deg, #047857, #065f46);
            transform: translateY(-1px);
        }

        .btn-cancel-reply {
            background: #6b7280;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-cancel-reply:hover {
            background: #4b5563;
            transform: translateY(-1px);
        }

        .reply-form {
            animation: slideDown 0.3s ease-out;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .comment-author {
            font-weight: 600;
            color: var(--primary-color);
        }

        .comment-date {
            color: #64748b;
            font-size: 0.9rem;
        }

        .comment-text {
            color: #374151;
            line-height: 1.7;
            font-size: 1.1rem;
            font-weight: 400;
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
            margin-bottom: 2rem;
            transition: var(--transition);
        }

        .back-button:hover {
            color: var(--accent-color);
            transform: translateX(-5px);
        }

        .login-notice {
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            border: 1px solid #f59e0b;
            padding: 1.5rem;
            border-radius: var(--border-radius);
            margin-bottom: 2rem;
            text-align: center;
        }

        .login-notice-text {
            color: #92400e;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .login-button {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
        }

        .login-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(245, 158, 11, 0.3);
            color: white;
            text-decoration: none;
        }

        .success-message {
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
            border: 1px solid #10b981;
            color: #065f46;
            padding: 1rem;
            border-radius: var(--border-radius);
            margin-bottom: 1rem;
            font-weight: 600;
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideInFromLeft {
            from {
                opacity: 0;
                transform: translateX(-50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.8;
            }
        }

        .blog-content-main,
        .comments-section {
            animation: fadeInUp 0.8s ease-out;
        }

        .blog-image-featured {
            animation: slideInFromLeft 0.8s ease-out 0.2s both;
        }

        .hero-content > * {
            animation: fadeInUp 0.6s ease-out forwards;
        }

        .hero-breadcrumb {
            animation-delay: 0.1s;
        }

        .hero-title {
            animation-delay: 0.2s;
        }

        .hero-meta {
            animation-delay: 0.3s;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .blog-hero {
                padding: 100px 0 60px;
                min-height: 50vh;
            }

            .hero-content {
                padding: 0 1rem;
            }

            .hero-title {
                font-size: clamp(2rem, 8vw, 3rem);
            }

            .hero-meta {
                flex-direction: column;
                gap: 1rem;
            }

            .blog-article-container {
                margin: -40px auto 0;
                padding: 0 1rem;
            }

            .blog-image-featured {
                height: 300px;
            }

            .blog-content-main {
                padding: 2.5rem;
            }

            .content-text {
                font-size: 1.15rem;
            }

            .section-title {
                font-size: 1.5rem;
            }

            .section-subtitle {
                font-size: 1.25rem;
            }

            .comments-title {
                font-size: 1.75rem;
            }

            .comments-section {
                padding: 2.5rem;
            }

            .comment-form {
                padding: 2rem;
            }

            .comment-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }
        }

        @media (max-width: 480px) {
            .hero-content {
                padding: 0 0.5rem;
            }

            .blog-content-main,
            .comments-section {
                padding: 2rem;
            }

            .comment-form {
                padding: 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Hero Header moderne -->
    <div class="blog-hero">
        <div class="hero-content">
            <a href="{{ path('app_blog_index') }}" class="hero-breadcrumb">
                ← Retour aux actualités
            </a>
            
            <h1 class="hero-title">{{ blog.titleOne }}</h1>
            
            <div class="hero-meta">
                {% if blog.publishedAt %}
                <div class="hero-meta-item">
                    {{ blog.publishedAt|date('d F Y') }}
                </div>
                {% endif %}
                {% if blog.author %}
                <div class="hero-meta-item">
                    Par {{ blog.author }}
                </div>
                {% endif %}
                {% if blog.comments|length > 0 %}
                <div class="hero-meta-item">
                    {{ blog.comments|length }} commentaire{{ blog.comments|length > 1 ? 's' : '' }}
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="blog-article-container">
        {% for message in app.flashes('success') %}
            <div class="success-message">
                {{ message }}
            </div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="error-message" style="background: #fee2e2; color: #dc2626; padding: 1rem; margin: 1rem 0; border-radius: 8px; border: 1px solid #fecaca;">
                {{ message }}
            </div>
        {% endfor %}

        {% if blog.image %}
        <img src="{{ asset('uploads/images/' ~ blog.image) }}" alt="{{ blog.titleOne }}" class="blog-image-featured">
        {% endif %}

        <div class="blog-content-main">
            {% if blog.contentOne %}
            <div class="content-section">
                <div class="content-text">{{ blog.contentOne|nl2br }}</div>
            </div>
            {% endif %}

            {% if blog.titleTwo %}
            <div class="content-section">
                <h2 class="section-title">{{ blog.titleTwo }}</h2>
                {% if blog.contentTwo %}
                <div class="content-text">{{ blog.contentTwo|nl2br }}</div>
                {% endif %}
            </div>
            {% endif %}

            {% if blog.titleTree %}
            <div class="content-section">
                <h2 class="section-title">{{ blog.titleTree }}</h2>
                {% if blog.contentTree %}
                <div class="content-text">{{ blog.contentTree|nl2br }}</div>
                {% endif %}
                
                {% if blog.sousTitleTree %}
                <h3 class="section-subtitle">{{ blog.sousTitleTree }}</h3>
                {% if blog.sousContentTree %}
                <div class="content-text">{{ blog.sousContentTree|nl2br }}</div>
                {% endif %}
                {% endif %}
            </div>
            {% endif %}

            {% if blog.titleFor %}
            <div class="content-section">
                <h2 class="section-title">{{ blog.titleFor }}</h2>
                {% if blog.contentFor %}
                <div class="content-text">{{ blog.contentFor|nl2br }}</div>
                {% endif %}
            </div>
            {% endif %}
        </div>

        <div class="comments-section">
            <h2 class="comments-title">
                Commentaires ({{ blog.comments|length }})
            </h2>

            {% if app.user %}
                {{ form_start(commentForm, {'attr': {'class': 'comment-form'}, 'method': 'POST'}) }}
                    <div class="form-group">
                        {{ form_label(commentForm.text, 'Votre commentaire', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(commentForm.text, {'attr': {'class': 'form-control comment-textarea', 'placeholder': 'Partagez votre avis sur cet article...'}}) }}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn-submit">
                            <span>Publier le commentaire</span>
                        </button>
                    </div>
                    {{ form_rest(commentForm) }}
                {{ form_end(commentForm) }}
            {% else %}
                <div class="login-notice">
                    <p class="login-notice-text">Vous devez être connecté pour laisser un commentaire</p>
                    <a href="{{ path('app_login') }}" class="login-button">Se connecter</a>
                </div>
            {% endif %}

            {% if blog.comments|length > 0 %}
            <div class="comment-list">
                {% for comment in blog.comments %}
                    {% if not comment.parent %}
                        {{ include('content/blog/_comment.html.twig', {'comment': comment, 'blog': blog, 'level': 0}) }}
                    {% endif %}
                {% endfor %}
            </div>
            {% else %}
            <p style="text-align: center; color: #64748b; font-style: italic; margin-top: 2rem;">
                Aucun commentaire pour le moment. Soyez le premier à partager votre avis !
            </p>
            {% endif %}
        </div>
    </div>

    <script>
        // Variables globales
        const BLOG_REPLY_URL = '{{ path('blog_reply_ajax', {'id': blog.id}) }}';
        const BLOG_ID = {{ blog.id }};

        function toggleReplyForm(commentId) {
            const replyForm = document.getElementById('reply-form-' + commentId);
            const isVisible = replyForm.style.display !== 'none';
            
            // Masquer tous les autres formulaires de réponse
            document.querySelectorAll('.reply-form').forEach(form => {
                form.style.display = 'none';
            });
            
            // Afficher/masquer le formulaire ciblé
            if (!isVisible) {
                replyForm.style.display = 'block';
                // Focus sur le textarea
                const textarea = replyForm.querySelector('textarea');
                if (textarea) {
                    setTimeout(() => textarea.focus(), 100);
                }
            }
        }

        function submitReply(event, parentId, blogId) {
            event.preventDefault();
            
            console.log('Submitting reply to parent:', parentId, 'blog:', blogId);
            console.log('URL:', BLOG_REPLY_URL);
            
            const form = event.target;
            const textarea = form.querySelector('textarea[name="text"]');
            const submitBtn = form.querySelector('.btn-submit-reply');
            const btnText = submitBtn.querySelector('.btn-text');
            const btnLoader = submitBtn.querySelector('.btn-loader');
            
            if (!textarea.value.trim()) {
                alert('Veuillez écrire une réponse.');
                return;
            }

            // État de chargement
            submitBtn.disabled = true;
            btnText.style.display = 'none';
            btnLoader.style.display = 'inline';
            
            const formData = new FormData();
            formData.append('text', textarea.value.trim());
            formData.append('parent_id', parentId);
            
            console.log('FormData:', {
                text: textarea.value.trim(),
                parent_id: parentId
            });
            
            fetch(BLOG_REPLY_URL, {
                method: 'POST',
                body: formData
            })
            .then(response => {
                console.log('Response status:', response.status);
                console.log('Response headers:', response.headers);
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                return response.json();
            })
            .then(data => {
                console.log('Response data:', data);
                if (data.success) {
                    // Créer le nouveau commentaire HTML
                    const newCommentHtml = createCommentHtml(data.comment, 1, BLOG_ID);
                    
                    // Ajouter à la liste des réponses
                    const repliesContainer = document.getElementById('comment-replies-' + parentId);
                    repliesContainer.insertAdjacentHTML('beforeend', newCommentHtml);
                    
                    // Réinitialiser et masquer le formulaire
                    textarea.value = '';
                    toggleReplyForm(parentId);
                    
                    // Afficher un message de succès
                    showMessage('Réponse publiée avec succès !', 'success');
                } else {
                    showMessage(data.message || 'Erreur lors de la publication.', 'error');
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
                showMessage('Erreur de connexion.', 'error');
            })
            .finally(() => {
                // Restaurer l'état du bouton
                submitBtn.disabled = false;
                btnText.style.display = 'inline';
                btnLoader.style.display = 'none';
            });
        }

        function createCommentHtml(comment, level, blogId) {
            const deleteButton = comment.isAdmin ? 
                `<form method="post" action="/admin/comment/${comment.id}/delete" style="display: inline-block; margin-left: 1rem;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
                    <input type="hidden" name="_token" value="">
                    <button type="submit" class="btn-delete-comment" title="Supprimer ce commentaire">
                        Supprimer
                    </button>
                </form>` : '';

            return `
                <div class="comment-item" style="margin-left: ${level * 2}rem;">
                    <div class="comment-header">
                        <div class="comment-author">${comment.author}</div>
                        <div class="comment-actions">
                            <div class="comment-date">${comment.createdAt}</div>
                            <button type="button" class="btn-reply-comment" onclick="toggleReplyForm(${comment.id})" title="Répondre à ce commentaire">
                                Répondre
                            </button>
                            ${deleteButton}
                        </div>
                    </div>
                    <div class="comment-text">${comment.text.replace(/\n/g, '<br>')}</div>
                    
                    <div id="reply-form-${comment.id}" class="reply-form" style="display: none; margin-top: 1rem; padding: 1rem; background: rgba(255, 255, 255, 0.05); border-radius: 8px;">
                        <form id="ajax-reply-form-${comment.id}" onsubmit="submitReply(event, ${comment.id}, ${blogId})">
                            <div class="form-group">
                                <label for="reply-text-${comment.id}">Votre réponse :</label>
                                <textarea 
                                    id="reply-text-${comment.id}" 
                                    name="text" 
                                    rows="3" 
                                    required
                                    placeholder="Écrivez votre réponse..."
                                    style="width: 100%; padding: 0.8rem; border: 1px solid #d1d5db; border-radius: 6px; font-size: 1rem; resize: vertical; background: rgba(255, 255, 255, 0.9);"
                                ></textarea>
                            </div>
                            <div class="reply-form-actions" style="margin-top: 1rem; display: flex; gap: 1rem;">
                                <button type="submit" class="btn-submit-reply">
                                    <span class="btn-text">Publier la réponse</span>
                                    <span class="btn-loader" style="display: none;">Envoi...</span>
                                </button>
                                <button type="button" class="btn-cancel-reply" onclick="toggleReplyForm(${comment.id})">Annuler</button>
                            </div>
                        </form>
                    </div>
                    
                    <div id="comment-replies-${comment.id}" class="comment-replies" style="margin-top: 1rem;"></div>
                </div>
            `;
        }

        function showMessage(message, type) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `alert alert-${type}`;
            messageDiv.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 1rem 1.5rem;
                border-radius: 6px;
                color: white;
                font-weight: 500;
                z-index: 1000;
                animation: slideIn 0.3s ease-out;
                ${type === 'success' ? 'background: #059669;' : 'background: #dc2626;'}
            `;
            messageDiv.textContent = message;
            
            document.body.appendChild(messageDiv);
            
            setTimeout(() => {
                messageDiv.style.animation = 'slideOut 0.3s ease-in';
                setTimeout(() => messageDiv.remove(), 300);
            }, 3000);
        }

        // Ajouter les animations CSS
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from { transform: translateX(100%); opacity: 0; }
                to { transform: translateX(0); opacity: 1; }
            }
            @keyframes slideOut {
                from { transform: translateX(0); opacity: 1; }
                to { transform: translateX(100%); opacity: 0; }
            }
        `;
        document.head.appendChild(style);
    </script>
{% endblock %}
