{% extends 'base.html.twig' %}

{% block title %}Contactez-nous - INFPF{% endblock %}

{% block stylesheets %}
<link href="../css/fichier.css" rel="stylesheet"/>
<style>
    /* Variables INFPF - Cohérence avec l'ADN du site */
    :root {
        --primary-color: #0b3f89;
        --secondary-color: #1e40af;
        --accent-color: #3b82f6;
        --success-color: #059669;
        --light-gray: #f8fafc;
        --primary-gradient: linear-gradient(135deg, #0b3f89 0%, #1e5cb8 100%);
        --accent-gradient: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
        --success-gradient: linear-gradient(135deg, #059669 0%, #047857 100%);
        --glassmorphism: rgba(255, 255, 255, 0.1);
        --backdrop-blur: blur(20px);
        --border-radius-lg: 24px;
        --border-radius-xl: 32px;
        --shadow-soft: 0 20px 40px rgba(11, 63, 137, 0.08);
        --shadow-medium: 0 25px 50px rgba(11, 63, 137, 0.12);
        --shadow-heavy: 0 35px 70px rgba(11, 63, 137, 0.15);
        --transition-smooth: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        --transition-spring: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    * {
    box-sizing: border-box;
    }

    body {
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        color: #1e293b;
        line-height: 1.7;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    /* Hero Section - Style INFPF Moderne */
    .contact-hero {
        position: relative;
        background: var(--primary-gradient);
        padding: clamp(80px, 10vw, 120px) 0 clamp(60px, 8vw, 80px);
        text-align: center;
        overflow: hidden;
    }

    .contact-hero::before {
        content: '';
        position: absolute;
        inset: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 clamp(1rem, 4vw, 2rem);
    }

    .hero-title {
        font-size: clamp(3.5rem, 8vw, 6rem);
        font-weight: 900;
        color: white;
        margin-bottom: clamp(1rem, 3vw, 1.5rem);
        line-height: 1.1;
        letter-spacing: -0.025em;
        text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .hero-subtitle {
        font-size: clamp(1.3rem, 3vw, 1.8rem);
        color: rgba(255, 255, 255, 0.95);
        font-weight: 500;
        max-width: 850px;
        margin: 0 auto;
        line-height: 1.5;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }

    /* Flash Messages Modernes */
    .flash-messages {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 9999;
        max-width: 400px;
    }

    .flash-success, .flash-error {
        padding: 1rem 1.5rem;
        border-radius: var(--border-radius-lg);
        margin-bottom: 0.5rem;
        font-weight: 600;
        backdrop-filter: var(--backdrop-blur);
        border: 1px solid;
        animation: slideInRight 0.5s var(--transition-spring);
    }

    .flash-success {
        background: rgba(5, 150, 105, 0.95);
        color: white;
        border-color: rgba(5, 150, 105, 0.3);
        box-shadow: var(--shadow-soft);
    }

    .flash-error {
        background: rgba(239, 68, 68, 0.95);
        color: white;
        border-color: rgba(239, 68, 68, 0.3);
        box-shadow: var(--shadow-soft);
    }

    @keyframes slideInRight {
        from {
            transform: translateX(100%);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    /* Layout Principal Ultra-Moderne */
    .contact-container {
        max-width: 1400px;
        margin: -60px auto 0;
        padding: 0 clamp(1rem, 4vw, 2rem);
        position: relative;
        z-index: 10;
    }

    /* Section Principale - Design Fluide INFPF */
    .contact-content {
        display: grid;
        grid-template-columns: 1fr;
        gap: clamp(2rem, 5vw, 4rem);
        margin-bottom: clamp(3rem, 6vw, 5rem);
    }

    /* Formulaire Principal - Design Glassmorphism Moderne */
    .contact-form-section {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: var(--backdrop-blur);
        border-radius: var(--border-radius-xl);
        padding: clamp(2.5rem, 6vw, 4rem);
        box-shadow: var(--shadow-heavy);
        border: 1px solid rgba(255, 255, 255, 0.2);
        position: relative;
        overflow: hidden;
    }

    .contact-form-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 6px;
        background: var(--primary-gradient);
        z-index: 1;
    }

    .form-header {
        text-align: center;
        margin-bottom: clamp(2rem, 4vw, 3rem);
        position: relative;
        z-index: 2;
    }

    .form-title {
        font-size: clamp(3rem, 6vw, 4rem);
        font-weight: 900;
        color: var(--primary-color);
        margin-bottom: 1.5rem;
        line-height: 1.2;
        letter-spacing: -0.02em;
    }

    .form-subtitle {
        font-size: clamp(1.4rem, 3vw, 1.8rem);
        color: #64748b;
        font-weight: 500;
        max-width: 700px;
        margin: 0 auto clamp(2rem, 4vw, 3rem);
        line-height: 1.6;
    }

    .form-urgency {
        background: linear-gradient(135deg, rgba(251, 191, 36, 0.1), rgba(245, 158, 11, 0.1));
        border: 2px solid #f59e0b;
        border-radius: var(--border-radius-lg);
        padding: clamp(1.25rem, 3vw, 2rem);
        text-align: center;
        margin-bottom: clamp(2.5rem, 5vw, 3.5rem);
        position: relative;
        overflow: hidden;
    }

    .form-urgency::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        right: 0;
        bottom: 0;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
        animation: shimmer 2s infinite;
    }

    @keyframes shimmer {
        0% { left: -100%; }
        100% { left: 100%; }
    }

    .form-urgency-text {
        font-size: clamp(1.2rem, 2.5vw, 1.5rem);
        font-weight: 700;
        color: #92400e;
        margin: 0;
        position: relative;
        z-index: 1;
    }

    /* Grid Formulaire Moderne */
    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: clamp(1.5rem, 3vw, 2rem);
        margin-bottom: clamp(2rem, 4vw, 3rem);
    }

    .form-group {
        position: relative;
    }

    .form-group.full-width {
        grid-column: 1 / -1;
    }

    .form-group label {
    display: block;
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 1rem;
        transition: var(--transition-smooth);
    }

    .form-group input,
    .form-group textarea {
    width: 100%;
        padding: 1.5rem 1.75rem;
        font-size: 1.3rem;
        line-height: 1.5;
        color: #374151;
        background: rgba(255, 255, 255, 0.9);
        border: 2px solid #e5e7eb;
        border-radius: var(--border-radius-lg);
        transition: var(--transition-smooth);
        backdrop-filter: blur(10px);
        font-family: inherit;
    }

    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: var(--accent-color);
        background: white;
        box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1), var(--shadow-soft);
        transform: translateY(-2px);
    }

    .form-group textarea {
        min-height: 140px;
        resize: vertical;
    }

    /* Bouton Submit Ultra-Moderne */
    .submit-section {
        text-align: center;
        margin-top: clamp(2.5rem, 5vw, 4rem);
    }

    .submit-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 1.5rem 3.5rem;
        font-size: 1.4rem;
        font-weight: 700;
    color: white;
        background: var(--primary-gradient);
    border: none;
        border-radius: var(--border-radius-lg);
    cursor: pointer;
        transition: var(--transition-spring);
        position: relative;
        overflow: hidden;
        text-transform: none;
        letter-spacing: 0.025em;
        box-shadow: var(--shadow-medium);
        min-width: 320px;
    }

    .submit-btn::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.1) 50%, transparent 70%);
        transform: translateX(-100%);
        transition: transform 0.6s;
    }

    .submit-btn:hover {
        transform: translateY(-4px) scale(1.02);
        box-shadow: var(--shadow-heavy), 0 0 0 4px rgba(59, 130, 246, 0.2);
    }

    .submit-btn:hover::before {
        transform: translateX(100%);
    }

    .submit-btn:active {
        transform: translateY(-2px) scale(0.98);
    }

    /* Section Contact Info - Design Fluide */
    .contact-info-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: clamp(2rem, 4vw, 3rem);
        margin: clamp(3rem, 6vw, 5rem) 0;
    }

    .contact-info-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: var(--backdrop-blur);
        border-radius: var(--border-radius-xl);
        padding: clamp(2rem, 4vw, 3rem);
        text-align: center;
        box-shadow: var(--shadow-medium);
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: var(--transition-spring);
        position: relative;
        overflow: hidden;
    }

    .contact-info-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--accent-gradient);
        transform: scaleX(0);
        transition: transform 0.5s var(--transition-spring);
    }

    .contact-info-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-heavy);
    }

    .contact-info-card:hover::before {
        transform: scaleX(1);
    }

    .contact-info-icon {
        width: 80px;
        height: 80px;
        background: var(--accent-gradient);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: white;
        font-size: 2rem;
        box-shadow: var(--shadow-soft);
        transition: var(--transition-spring);
    }

    .contact-info-card:hover .contact-info-icon {
        transform: scale(1.1) rotate(5deg);
        box-shadow: var(--shadow-medium);
    }

    .contact-info-title {
        font-size: 1.8rem;
        font-weight: 800;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .contact-info-text {
        font-size: 1.3rem;
        color: #64748b;
        font-weight: 500;
        line-height: 1.6;
    }

    /* Section Calendly Moderne */
    .calendly-section {
        background: linear-gradient(135deg, rgba(11, 63, 137, 0.05), rgba(59, 130, 246, 0.05));
        border-radius: var(--border-radius-xl);
        padding: clamp(2.5rem, 5vw, 4rem);
        text-align: center;
        margin: clamp(3rem, 6vw, 5rem) 0;
        border: 2px solid rgba(59, 130, 246, 0.1);
        position: relative;
        overflow: hidden;
    }

    .calendly-section::before {
        content: '';
        position: absolute;
        inset: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 60 60"><circle cx="30" cy="30" r="1" fill="rgba(59,130,246,0.1)"/></svg>');
        z-index: 1;
    }

    .calendly-content {
        position: relative;
        z-index: 2;
    }

    .calendly-section h3 {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        font-weight: 800;
        color: var(--primary-color);
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .calendly-section p {
        font-size: clamp(1.3rem, 3vw, 1.6rem);
        color: #64748b;
        font-weight: 500;
        margin-bottom: 2.5rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .calendly-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 1.5rem 3rem;
        font-size: 1.3rem;
        font-weight: 700;
        color: white;
        background: var(--accent-gradient);
        text-decoration: none;
        border-radius: var(--border-radius-lg);
        transition: var(--transition-spring);
        box-shadow: var(--shadow-medium);
        position: relative;
        overflow: hidden;
    }

    .calendly-btn::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.2) 50%, transparent 70%);
        transform: translateX(-100%);
        transition: transform 0.6s;
    }

    .calendly-btn:hover {
        transform: translateY(-4px) scale(1.05);
        box-shadow: var(--shadow-heavy);
        text-decoration: none;
        color: white;
    }

    .calendly-btn:hover::before {
        transform: translateX(100%);
    }

    /* Section Map Ultra-Moderne */
    .map-full-section {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: var(--backdrop-blur);
        border-radius: var(--border-radius-xl);
        padding: clamp(2.5rem, 5vw, 4rem);
        margin: clamp(3rem, 6vw, 5rem) 0;
        box-shadow: var(--shadow-heavy);
        border: 1px solid rgba(255, 255, 255, 0.2);
        position: relative;
        overflow: hidden;
    }

    .map-full-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 6px;
        background: var(--success-gradient);
        z-index: 1;
    }

    .map-header {
        text-align: center;
        margin-bottom: clamp(2rem, 4vw, 3rem);
        position: relative;
        z-index: 2;
    }

    .map-title {
        font-size: clamp(3rem, 6vw, 4rem);
        font-weight: 900;
        color: var(--primary-color);
        margin-bottom: 1.5rem;
        line-height: 1.2;
        letter-spacing: -0.02em;
    }

    .map-subtitle {
        font-size: clamp(1.4rem, 3vw, 1.8rem);
        color: #64748b;
        font-weight: 500;
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.6;
    }

    .map-container {
        position: relative;
        border-radius: var(--border-radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow-medium);
        background: #f8fafc;
        z-index: 2;
    }

    .map-container iframe {
        width: 100%;
        height: clamp(350px, 50vw, 500px);
        border: none;
        transition: var(--transition-smooth);
    }

    .map-container:hover iframe {
        transform: scale(1.02);
    }

    /* Styles Responsive Ultra-Modernes */
    @media (max-width: 1200px) {
        .contact-container {
            margin-top: -40px;
        }
        
        .contact-form-section {
            padding: clamp(2rem, 5vw, 3rem);
        }
        
        .form-grid {
            grid-template-columns: 1fr;
        }
        
        .contact-info-section {
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
        }
    }

    @media (max-width: 968px) {
        .hero-title {
            font-size: clamp(3rem, 10vw, 4.5rem);
        }
        
        .contact-container {
            padding: 0 1.5rem;
            margin-top: -30px;
        }
        
        .contact-form-section,
        .map-full-section,
        .calendly-section {
            padding: clamp(2rem, 6vw, 2.5rem);
        }
        
        .submit-btn {
    width: 100%;
            min-width: auto;
        }
        
        .contact-info-section {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
        
        .contact-info-card {
            padding: 2rem 1.5rem;
        }
    }

    @media (max-width: 768px) {
        .contact-hero {
            padding: clamp(60px, 12vw, 80px) 0 clamp(40px, 8vw, 60px);
        }
        
        .hero-content {
            padding: 0 1.5rem;
        }
        
        .contact-container {
            padding: 0 1rem;
            margin-top: -20px;
        }
        
        .form-grid {
            gap: 1.5rem;
        }
        
        .form-group input,
        .form-group textarea {
            padding: 1.25rem 1.5rem;
            font-size: 1.2rem;
        }
        
        .form-group label {
            font-size: 1.2rem;
        }
        
        .contact-info-icon {
            width: 60px;
            height: 60px;
            font-size: 1.5rem;
        }
        
        .flash-messages {
            left: 10px;
            right: 10px;
            top: 10px;
            max-width: none;
        }
    }

    @media (max-width: 480px) {
        .contact-hero {
            padding: clamp(50px, 15vw, 70px) 0 clamp(30px, 10vw, 50px);
        }
        
        .hero-content,
        .contact-container {
            padding: 0 1rem;
        }
        
        .contact-form-section,
        .map-full-section,
        .calendly-section {
            padding: 1.5rem;
            border-radius: 20px;
        }
        
        .form-urgency {
            padding: 1rem;
        }
        
        .submit-btn,
        .calendly-btn {
            padding: 1.25rem 2.5rem;
            font-size: 1.2rem;
        }
        
        .contact-info-card {
            padding: 1.5rem;
        }
        
        .map-container iframe {
            height: 300px;
        }
    }

    /* Animations Avancées */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .contact-form-section,
    .contact-info-card,
    .calendly-section,
    .map-full-section {
        animation: fadeInUp 0.8s ease-out both;
    }

    .contact-info-card:nth-child(1) { animation-delay: 0.1s; }
    .contact-info-card:nth-child(2) { animation-delay: 0.2s; }
    .contact-info-card:nth-child(3) { animation-delay: 0.3s; }
    .calendly-section { animation-delay: 0.4s; }
    .map-full-section { animation-delay: 0.5s; }

</style>

{% endblock %}

