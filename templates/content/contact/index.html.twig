</section>


</div>

<div class="flex-row">
    <div class="contact-form">
        {{ form_start(contactForm) }}
        {{ form_row(contactForm.name, {'attr': {'placeholder': 'Nom Prénom'}}) }}
        {{ form_row(contactForm.email, {'attr': {'placeholder': 'E-mail'}}) }}
        {{ form_row(contactForm.numero, {'label': 'Téléphone'}) }}
        {{ form_row(contactForm.content, {'attr': {'placeholder': 'Votre message ici'}}) }}
        {{ form_end(contactForm) }}
    </div>

    <div class="map-iframe">
<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2886.0385500261586!2d7.182744376855092!3d43.66816807110144!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12cdd16489388b83%3A0x5f9bd1b30eb8340a!2s257%20Av.%20Saint-Exup%C3%A9ry%2C%2006700%20Saint-Laurent-du-Var!5e0!3m2!1sfr!2sfr!4v1715769457806!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>    </div>
</div>
{{ include('footer.html.twig') }}
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.querySelector('.contact-link').addEventListener('click', function (event) {
        event.preventDefault();
        document.querySelector('.contact-form').style.display = 'block';
    });
</script>
{% endblock %}
