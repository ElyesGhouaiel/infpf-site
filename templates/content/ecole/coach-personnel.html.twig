{% extends 'base.html.twig' %}

{% block title %}Le coaching : un suivi personnel - INFPF
{% endblock %}

{% block stylesheets %}
	<link href="../css/fichier.css?v=58" rel="stylesheet"/>
    <link href="../css/footer1.css" rel="stylesheet"/>
	<style>
		/* ===== VARIABLES CSS MODERNES ===== */
		:root {
			--primary-color: #0b3f89;
			--primary-light: #1e5cb8;
			--accent-color: #00b4d8;
			--text-dark: #2d3748;
			--text-light: #718096;
			--white: #ffffff;
			--bg-light: #f8fafc;
			--bg-section: #fafbfc;
			--shadow-light: 0 4px 20px rgba(11, 63, 137, 0.1);
			--shadow-medium: 0 8px 30px rgba(11, 63, 137, 0.15);
			--shadow-heavy: 0 15px 50px rgba(11, 63, 137, 0.2);
			--primary-gradient: linear-gradient(135deg, #0b3f89 0%, #1e5cb8 50%, #00b4d8 100%);
			--white-gradient: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
			--transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			--border-radius: 24px;
		}

		/* ===== RESET ET BASE ===== */
		* {
			box-sizing: border-box;
		}

		body {
			font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
			line-height: 1.6;
			color: var(--text-dark);
			background: linear-gradient(180deg, #fafbfc 0%, #f0f4f8 100%);
		}

		/* ===== HERO SECTION MODERNE ===== */
		.coach-hero-formation {
			position: relative;
			min-height: 45vh;
			background: var(--primary-gradient);
			overflow: hidden;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			text-align: center;
			padding: 40px 40px;
		}

		.coach-hero-formation::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: url('{{ asset('img/coaach.png') }}') center center/cover;
			background-repeat: no-repeat;
			opacity: 0.08;
			z-index: 1;
		}

		.coach-hero-formation::after {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse"><path d="M 20 0 L 0 0 0 20" fill="none" stroke="rgba(255,255,255,0.08)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
			z-index: 2;
		}

		.coach-hero-content {
			position: relative;
			z-index: 3;
			color: white;
			max-width: 800px;
			margin: 0 auto;
		}

		.coach-hero-title {
			font-size: clamp(3.2rem, 7vw, 5.2rem);
			font-weight: 800;
			margin-bottom: 28px;
			text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
			letter-spacing: -0.02em;
		}

		.coach-hero-subtitle {
			font-size: clamp(1.5rem, 3.5vw, 2.1rem);
			font-weight: 400;
			margin-bottom: 50px;
			opacity: 0.95;
			line-height: 1.4;
		}

		.coach-hero-cta {
			display: inline-flex;
			align-items: center;
			gap: 12px;
			background: rgba(255, 255, 255, 0.15);
			color: white;
			padding: 18px 36px;
			border-radius: 50px;
			text-decoration: none;
			font-weight: 600;
			font-size: 1.1rem;
			backdrop-filter: blur(10px);
			border: 2px solid rgba(255, 255, 255, 0.2);
			transition: var(--transition);
			text-shadow: none;
		}

		.coach-hero-cta:hover {
			background: rgba(255, 255, 255, 0.25);
			transform: translateY(-2px);
			box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
			color: white;
		}

		/* ===== BREADCRUMBS MODERNES ===== */
		.modern-breadcrumbs {
			background: white;
			padding: 20px 0;
			border-bottom: 1px solid #e2e8f0;
		}

		.breadcrumbs-container {
			max-width: 1200px;
			margin: 0 auto;
			padding: 0 40px;
		}

		.breadcrumbs-list {
			display: flex;
			align-items: center;
			gap: 12px;
			font-size: 0.95rem;
			color: var(--text-light);
		}

		.breadcrumbs-list a {
			color: var(--primary-color);
			text-decoration: none;
			transition: var(--transition);
		}

		.breadcrumbs-list a:hover {
			color: var(--accent-color);
		}

		.breadcrumb-separator {
			color: #cbd5e0;
			font-weight: 600;
		}

		.breadcrumb-current {
			color: var(--text-dark);
			font-weight: 500;
		}

		/* ===== CONTAINER PRINCIPAL ===== */
		.coach-main-container {
			max-width: 1200px;
			margin: 0 auto;
			padding: 80px 40px;
		}

		/* ===== SECTIONS MODERNES ===== */
		.coach-modern-section {
			margin-bottom: 80px;
		}

		.coach-section-header {
			text-align: center;
			margin-bottom: 60px;
		}

		.coach-section-title {
			font-size: clamp(2.8rem, 5vw, 3.5rem);
			font-weight: 800;
			color: var(--primary-color);
			margin-bottom: 24px;
			line-height: 1.2;
		}

		.coach-section-subtitle {
			font-size: 1.25rem;
			color: var(--text-dark);
			max-width: 900px;
			margin: 24px auto 0;
			line-height: 1.7;
			text-align: center;
			background: linear-gradient(135deg, rgba(248, 250, 252, 0.8) 0%, rgba(241, 245, 249, 0.9) 100%);
			padding: 32px 40px;
			border-radius: 20px;
			border: 1px solid rgba(11, 63, 137, 0.1);
			box-shadow: 0 4px 20px rgba(11, 63, 137, 0.05);
			position: relative;
			overflow: hidden;
		}

		.coach-section-subtitle::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 4px;
			background: var(--primary-gradient);
		}

		/* ===== LAYOUT SECTIONS ===== */
		.coach-section-row {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 80px;
			align-items: center;
			margin-bottom: 80px;
		}

		.coach-section-row.reverse {
			direction: rtl;
		}

		.coach-section-row.reverse > * {
			direction: ltr;
		}

		.coach-section-content h2 {
			font-size: clamp(2.5rem, 4vw, 3.2rem);
			font-weight: 800;
			color: var(--primary-color);
			margin-bottom: 28px;
			line-height: 1.2;
		}

		.coach-section-content p {
			font-size: 1.3rem;
			line-height: 1.8;
			color: var(--text-dark);
			margin-bottom: 24px;
		}

		.coach-section-content strong {
			color: var(--primary-color);
		}

		/* ===== IMAGES BANNIÈRE (ORIGINALES) ===== */
		.coach-banner-image {
			position: relative;
			border-radius: var(--border-radius);
			overflow: hidden;
			box-shadow: var(--shadow-medium);
		}

		.coach-banner-image img {
			width: 100%;
			height: auto;
			transition: var(--transition);
		}

		.coach-banner-image:hover img {
			transform: scale(1.02);
		}

		/* ===== HIGHLIGHT SECTION ===== */
		.coach-highlight-section {
			background: var(--primary-gradient);
			padding: 80px 40px;
			margin: 80px -40px;
			border-radius: var(--border-radius);
			color: white;
			text-align: center;
		}

		.coach-highlight-title {
			font-size: clamp(2.8rem, 5vw, 3.8rem);
			font-weight: 800;
			margin-bottom: 28px;
			color: white;
		}

		.coach-highlight-content {
			font-size: 1.2rem;
			opacity: 0.95;
			max-width: 800px;
			margin: 0 auto;
		}

		/* ===== STATS SECTION ===== */
		.coach-stats-section {
			background: var(--white-gradient);
			padding: 60px 40px;
			border-radius: var(--border-radius);
			box-shadow: var(--shadow-light);
			text-align: center;
			margin: 60px 0;
		}

		.coach-stats-number {
			font-size: 4rem;
			font-weight: 800;
			color: var(--primary-color);
			display: block;
			margin-bottom: 12px;
		}

		.coach-stats-label {
			font-size: 1.3rem;
			color: var(--text-dark);
			font-weight: 600;
		}

		.coach-stats-description {
			font-size: 1.1rem;
			color: var(--text-light);
			margin-top: 16px;
		}

		/* ===== PROCESS STEPS ===== */
		.process-steps {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
			gap: 30px;
			margin: 60px 0;
		}

		.process-step {
			background: var(--white-gradient);
			padding: 40px;
			border-radius: var(--border-radius);
			box-shadow: var(--shadow-light);
			border: 1px solid rgba(11, 63, 137, 0.1);
			transition: var(--transition);
			text-align: center;
			position: relative;
		}

		.process-step:hover {
			transform: translateY(-8px);
			box-shadow: var(--shadow-medium);
		}

		.step-icon {
			width: 80px;
			height: 80px;
			background: var(--primary-gradient);
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			margin: 0 auto 24px;
			color: white;
			font-size: 32px;
			font-weight: bold;
		}

		.process-step h3 {
			font-size: 1.4rem;
			font-weight: 700;
			color: var(--primary-color);
			margin-bottom: 16px;
		}

		.process-step p {
			color: var(--text-dark);
			line-height: 1.6;
			margin: 0;
		}

		/* ===== MISSION CARDS ===== */
		.coach-mission-cards {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
			gap: 30px;
			margin: 60px 0;
		}

		.coach-mission-card {
			background: white;
			padding: 32px;
			border-radius: 20px;
			box-shadow: var(--shadow-light);
			border-left: 5px solid var(--primary-color);
			transition: var(--transition);
		}

		.coach-mission-card:hover {
			transform: translateY(-4px);
			box-shadow: var(--shadow-medium);
		}

		.coach-mission-icon {
			width: 80px;
			height: 80px;
			background: var(--primary-gradient);
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			margin-bottom: 20px;
			color: white;
			box-shadow: 0 6px 20px rgba(11, 63, 137, 0.15);
			position: relative;
			overflow: hidden;
			transition: var(--transition);
		}

		.coach-mission-icon::before {
			content: '';
			position: absolute;
			top: -50%;
			left: -50%;
			width: 200%;
			height: 200%;
			background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
			animation: float 3s ease-in-out infinite alternate;
		}

		.coach-mission-icon svg {
			width: 32px;
			height: 32px;
			display: block;
			z-index: 2;
			position: relative;
		}

		.coach-mission-card h4 {
			font-size: 1.4rem;
			font-weight: 700;
			color: var(--primary-color);
			margin-bottom: 16px;
		}

		.coach-mission-card p {
			color: var(--text-dark);
			line-height: 1.7;
			margin: 0;
			font-size: 1.1rem;
		}

		/* ===== ILLUSTRATIONS MODERNES ===== */
		.modern-illustration {
			display: flex;
			flex-direction: column;
			align-items: center;
			text-align: center;
			padding: 40px 30px;
			background: linear-gradient(135deg, rgba(248, 250, 252, 0.8) 0%, rgba(241, 245, 249, 0.9) 100%);
			border-radius: 24px;
			border: 1px solid rgba(11, 63, 137, 0.1);
			transition: var(--transition);
		}

		.modern-illustration:hover {
			transform: translateY(-5px);
			box-shadow: 0 20px 40px rgba(11, 63, 137, 0.15);
		}

		.illustration-circle {
			width: 160px;
			height: 160px;
			background: var(--primary-gradient);
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			margin-bottom: 24px;
			color: white;
			position: relative;
			overflow: hidden;
			box-shadow: 0 8px 25px rgba(11, 63, 137, 0.2);
		}

		.illustration-circle svg {
			width: 80px;
			height: 80px;
			display: block;
		}

		.illustration-circle::before {
			content: '';
			position: absolute;
			top: -50%;
			left: -50%;
			width: 200%;
			height: 200%;
			background: radial-gradient(circle, rgba(255,255,255,0.25) 0%, rgba(255,255,255,0.1) 50%, transparent 70%);
			animation: float 3s ease-in-out infinite alternate;
		}

		@keyframes float {
			0% { transform: translateY(0px) rotate(0deg); }
			100% { transform: translateY(-10px) rotate(5deg); }
		}

		.modern-illustration h3 {
			font-size: 1.4rem;
			font-weight: 700;
			color: var(--primary-color);
			margin-bottom: 12px;
		}

		.modern-illustration p {
			font-size: 1rem;
			color: var(--text-light);
			margin: 0;
			line-height: 1.5;
		}

		/* ===== INTRO PREMIUM ===== */
		.coach-intro-premium {
			background: linear-gradient(135deg, rgba(11, 63, 137, 0.03) 0%, rgba(30, 92, 184, 0.05) 50%, rgba(0, 180, 216, 0.03) 100%);
			padding: 100px 40px;
			margin: 40px 0 80px 0;
			border-radius: 32px;
			text-align: center;
			position: relative;
			overflow: hidden;
		}

		.coach-intro-premium::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="dots" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1.5" fill="rgba(11,63,137,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23dots)"/></svg>');
			z-index: 1;
		}

		.intro-premium-content {
			position: relative;
			z-index: 2;
			max-width: 1000px;
			margin: 0 auto;
		}

		.intro-badge {
			display: inline-flex;
			align-items: center;
			gap: 12px;
			background: var(--primary-gradient);
			color: white;
			padding: 16px 28px;
			border-radius: 50px;
			font-weight: 600;
			font-size: 1.1rem;
			margin-bottom: 32px;
			box-shadow: 0 8px 25px rgba(11, 63, 137, 0.3);
			animation: float 3s ease-in-out infinite alternate;
		}

		.intro-premium-title {
			font-size: clamp(3rem, 6vw, 4.5rem);
			font-weight: 800;
			color: var(--primary-color);
			margin-bottom: 32px;
			line-height: 1.1;
			text-shadow: 0 2px 10px rgba(11, 63, 137, 0.1);
		}

		.intro-premium-text {
			font-size: 1.6rem;
			color: var(--text-dark);
			line-height: 1.7;
			margin-bottom: 48px;
			max-width: 900px;
			margin-left: auto;
			margin-right: auto;
		}

		.intro-premium-text strong {
			color: var(--primary-color);
			font-weight: 800;
		}

		.intro-premium-features {
			display: flex;
			justify-content: center;
			flex-wrap: wrap;
			gap: 32px;
			margin-top: 48px;
		}

		.feature-point {
			display: flex;
			align-items: center;
			gap: 12px;
			background: linear-gradient(135deg, rgba(248, 250, 252, 0.8) 0%, rgba(241, 245, 249, 0.9) 100%);
			padding: 16px 24px;
			border-radius: 16px;
			border: 1px solid rgba(11, 63, 137, 0.1);
			box-shadow: 0 4px 15px rgba(11, 63, 137, 0.08);
			transition: var(--transition);
		}

		.feature-point:hover {
			transform: translateY(-3px);
			box-shadow: 0 8px 25px rgba(11, 63, 137, 0.15);
		}

		.feature-point svg {
			color: var(--primary-color);
			flex-shrink: 0;
		}

		.feature-point span {
			font-weight: 600;
			color: var(--text-dark);
			white-space: nowrap;
		}

		/* ===== STATS ENRICHIES ===== */
		.coach-stats-enriched {
			padding: 80px 40px;
			margin: 60px 0;
		}

		.stats-grid {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			gap: 40px;
			max-width: 1000px;
			margin: 0 auto;
		}

		.stat-item {
			text-align: center;
			padding: 40px 30px;
			background: linear-gradient(135deg, rgba(248, 250, 252, 0.8) 0%, rgba(241, 245, 249, 0.9) 100%);
			border-radius: 20px;
			border: 1px solid rgba(11, 63, 137, 0.1);
			transition: var(--transition);
			position: relative;
			overflow: hidden;
		}

		.stat-item.highlight {
			background: linear-gradient(135deg, rgba(11, 63, 137, 0.05) 0%, rgba(30, 92, 184, 0.08) 100%);
			border: 2px solid rgba(11, 63, 137, 0.2);
			transform: translateY(-8px);
		}

		.stat-item:hover {
			transform: translateY(-5px);
			box-shadow: 0 15px 40px rgba(11, 63, 137, 0.15);
		}

		.stat-item.highlight:hover {
			transform: translateY(-12px);
		}

		.stat-icon {
			width: 80px;
			height: 80px;
			background: var(--primary-gradient);
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			margin: 0 auto 20px;
			color: white;
			box-shadow: 0 8px 25px rgba(11, 63, 137, 0.2);
		}

		.stat-icon svg {
			width: 48px;
			height: 48px;
			display: block;
		}

		.stat-number {
			display: block;
			font-size: 3rem;
			font-weight: 800;
			color: var(--primary-color);
			margin-bottom: 8px;
			line-height: 1;
		}

		.stat-label {
			display: block;
			font-size: 1.2rem;
			font-weight: 700;
			color: var(--text-dark);
			margin-bottom: 8px;
		}

		.stat-description {
			font-size: 1rem;
			color: var(--text-light);
			margin: 0;
		}

		/* ===== MISSIONS MODERNES ===== */
		.missions-modern-grid {
			max-width: 800px;
			margin: 0 auto;
		}

		.mission-modern-item {
			display: flex;
			align-items: flex-start;
			margin-bottom: 40px;
			position: relative;
		}

		.mission-modern-item.last {
			margin-bottom: 0;
		}

		.mission-visual {
			display: flex;
			flex-direction: column;
			align-items: center;
			margin-right: 30px;
			position: relative;
		}

		.mission-circle {
			width: 80px;
			height: 80px;
			background: var(--primary-gradient);
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			color: white;
			box-shadow: 0 8px 25px rgba(11, 63, 137, 0.2);
			position: relative;
			z-index: 2;
		}

		.mission-line {
			width: 3px;
			height: 80px;
			background: linear-gradient(180deg, var(--primary-color) 0%, rgba(11, 63, 137, 0.3) 100%);
			margin-top: 10px;
		}

		.mission-modern-item.last .mission-line {
			display: none;
		}

		.mission-content {
			flex: 1;
			padding-top: 10px;
		}

		.mission-content h4 {
			font-size: 1.5rem;
			font-weight: 700;
			color: var(--primary-color);
			margin-bottom: 16px;
			line-height: 1.3;
		}

		.mission-content p {
			font-size: 1.15rem;
			color: var(--text-dark);
			line-height: 1.7;
			margin: 0;
		}

		/* ===== SPECIALIZATION SECTION ===== */
		.coach-specialization-section {
			background: linear-gradient(135deg, rgba(248, 250, 252, 0.6) 0%, rgba(240, 248, 255, 0.8) 100%);
			padding: 80px 40px;
			margin: 80px 0;
			border-radius: 32px;
			text-align: center;
		}

		.specialization-content h2 {
			font-size: clamp(2.8rem, 5vw, 3.8rem);
			font-weight: 800;
			color: var(--primary-color);
			margin-bottom: 32px;
			line-height: 1.2;
		}

		.specialization-text {
			max-width: 800px;
			margin: 0 auto 40px;
		}

		.specialization-text p {
			font-size: 1.4rem;
			color: var(--text-dark);
			line-height: 1.7;
			margin: 0;
