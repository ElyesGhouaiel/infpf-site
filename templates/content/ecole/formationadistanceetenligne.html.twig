{% extends 'base.html.twig' %}

{% block title %}Formation à distance et en ligne - INFPF
{% endblock %}

{% block stylesheets %}
	<link href="../css/fichier.css?v=58" rel="stylesheet"/>
    <link href="../css/footer1.css" rel="stylesheet"/>
	<style>
		/* ===== VARIABLES CSS MODERNES ===== */
		:root {
			--primary-color: #0b3f89;
			--primary-light: #1e5cb8;
			--accent-color: #00b4d8;
			--text-dark: #2d3748;
			--text-light: #718096;
			--white: #ffffff;
			--bg-light: #f8fafc;
			--bg-section: #fafbfc;
			--shadow-light: 0 4px 20px rgba(11, 63, 137, 0.1);
			--shadow-medium: 0 8px 30px rgba(11, 63, 137, 0.15);
			--shadow-heavy: 0 15px 50px rgba(11, 63, 137, 0.2);
			--primary-gradient: linear-gradient(135deg, #0b3f89 0%, #1e5cb8 50%, #00b4d8 100%);
			--white-gradient: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
			--transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			--border-radius: 24px;
		}

		/* ===== RESET ET BASE ===== */
		* {
			box-sizing: border-box;
		}

		body {
			font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
			line-height: 1.6;
			color: var(--text-dark);
			background: linear-gradient(180deg, #fafbfc 0%, #f0f4f8 100%);
		}

		/* ===== HERO SECTION MODERNE EN COLONNE ===== */
		.hero-formation {
			position: relative;
			min-height: 45vh;
			background: var(--primary-gradient);
			overflow: hidden;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			text-align: center;
			padding: 40px 40px;
		}

		.hero-formation::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: url('{{ asset('img/3.png') }}') center center/contain;
			background-repeat: no-repeat;
			opacity: 0.08;
			z-index: 1;
		}

		.hero-formation::after {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse"><path d="M 20 0 L 0 0 0 20" fill="none" stroke="rgba(255,255,255,0.08)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
			z-index: 2;
		}

		.hero-content {
			position: relative;
			z-index: 3;
			color: white;
			max-width: 800px;
			margin: 0 auto;
		}



		.hero-title {
			font-size: clamp(2.8rem, 6vw, 4.5rem);
			font-weight: 800;
			margin-bottom: 24px;
			text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
			animation: fadeInUp 1s ease-out;
			letter-spacing: -0.02em;
		}

		.hero-subtitle {
			font-size: clamp(1.3rem, 3vw, 1.8rem);
			font-weight: 400;
			margin-bottom: 50px;
			opacity: 0.95;
			animation: fadeInUp 1s ease-out 0.2s both;
			line-height: 1.4;
		}

		.hero-cta {
			display: inline-flex;
			align-items: center;
			gap: 12px;
			padding: 20px 40px;
			background: rgba(255, 255, 255, 0.15);
			color: white;
			text-decoration: none;
			border-radius: 60px;
			font-weight: 600;
			font-size: 1.1rem;
			backdrop-filter: blur(20px);
			border: 2px solid rgba(255, 255, 255, 0.2);
			transition: var(--transition);
			animation: fadeInUp 1s ease-out 0.4s both;
		}

		.hero-cta:hover {
			background: rgba(255, 255, 255, 0.25);
			transform: translateY(-3px);
			box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
			border-color: rgba(255, 255, 255, 0.4);
		}

		/* ===== ANIMATIONS ===== */
		@keyframes fadeInUp {
			from {
				opacity: 0;
				transform: translateY(40px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		@keyframes slideInLeft {
			from {
				opacity: 0;
				transform: translateX(-60px);
			}
			to {
				opacity: 1;
				transform: translateX(0);
			}
		}

		@keyframes slideInRight {
			from {
				opacity: 0;
				transform: translateX(60px);
			}
			to {
				opacity: 1;
				transform: translateX(0);
			}
		}

		/* ===== BREADCRUMBS MODERNES ===== */
		.modern-breadcrumbs {
			background: rgba(255, 255, 255, 0.95);
			backdrop-filter: blur(20px);
			padding: 24px 0;
			border-bottom: 1px solid rgba(11, 63, 137, 0.08);
		}

		.breadcrumbs-container {
			max-width: 1400px;
			margin: 0 auto;
			padding: 0 24px;
		}

		.breadcrumbs-list {
			display: flex;
			align-items: center;
			gap: 16px;
			font-size: 15px;
			color: var(--text-light);
		}

		.breadcrumbs-list a {
			color: var(--primary-color);
			text-decoration: none;
			font-weight: 500;
			transition: var(--transition);
		}

		.breadcrumbs-list a:hover {
			color: var(--accent-color);
		}

		.breadcrumb-separator {
			color: var(--text-light);
			font-weight: 300;
		}

		/* ===== CONTENEUR PRINCIPAL ===== */
		.main-container {
			max-width: 1400px;
			margin: 0 auto;
			padding: 0 24px;
		}

		/* ===== SECTIONS ALTERNÉES (ZIGZAG) ===== */
		.section-alternated {
			padding: 120px 0;
			position: relative;
		}

		.section-alternated:nth-child(even) {
			background: var(--bg-section);
		}

		.formation-section-row {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 80px;
			align-items: center;
			max-width: 1400px;
			margin: 0 auto;
			padding: 0 24px;
		}

		.formation-section-row.reverse {
			direction: rtl;
		}

		.formation-section-row.reverse > * {
			direction: ltr;
		}

		.section-content {
			animation: slideInLeft 1s ease-out;
		}

		.formation-section-row.reverse .section-content {
			animation: slideInRight 1s ease-out;
		}

		.section-visual {
			animation: slideInRight 1s ease-out;
		}

		.formation-section-row.reverse .section-visual {
			animation: slideInLeft 1s ease-out;
		}

		.section-title {
			font-size: clamp(2.8rem, 5vw, 4rem);
			font-weight: 800;
			color: var(--primary-color);
			margin-bottom: 24px;
			line-height: 1.2;
			position: relative;
		}

		.section-title::after {
			content: '';
			position: absolute;
			bottom: -12px;
			left: 0;
			width: 80px;
			height: 5px;
			background: var(--primary-gradient);
			border-radius: 3px;
		}

		.section-subtitle {
			font-size: 1.6rem;
			font-weight: 600;
			color: var(--accent-color);
			margin-bottom: 20px;
		}

		.section-text {
			font-size: 1.4rem;
			line-height: 1.8;
			color: var(--text-dark);
			margin-bottom: 24px;
			font-weight: 500;
		}

		.section-image {
			width: 100%;
			aspect-ratio: 4/3;
			object-fit: cover;
			border-radius: var(--border-radius);
			box-shadow: var(--shadow-heavy);
			transition: var(--transition);
		}

		.section-image:hover {
			transform: scale(1.02);
			box-shadow: 0 20px 60px rgba(11, 63, 137, 0.3);
		}

		/* ===== ACCORDÉONS MODERNES 2025 ===== */
		.modern-features {
			display: grid;
			gap: 20px;
			margin: 40px 0;
		}

		.feature-item {
			background: rgba(255, 255, 255, 0.8);
			border-radius: 20px;
			overflow: hidden;
			box-shadow: 0 8px 32px rgba(11, 63, 137, 0.1);
			transition: var(--transition);
			border: 1px solid rgba(255, 255, 255, 0.3);
		}

		.feature-item:hover {
			transform: translateY(-4px);
			box-shadow: 0 16px 48px rgba(11, 63, 137, 0.15);
		}

		.feature-header {
			background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
			color: white;
			padding: 24px 28px;
			cursor: pointer;
			font-weight: 600;
			font-size: 1.3rem;
			transition: var(--transition);
			position: relative;
			border: none;
			width: 100%;
			text-align: left;
			display: flex;
			justify-content: space-between;
			align-items: center;
		}

		.feature-header:hover {
			background: linear-gradient(135deg, var(--primary-light) 0%, var(--accent-color) 100%);
		}

		.feature-icon {
			width: 32px;
			height: 32px;
			border-radius: 50%;
			background: rgba(255, 255, 255, 0.2);
			display: flex;
			align-items: center;
			justify-content: center;
			font-size: 1.2rem;
			transition: var(--transition);
		}

		.feature-item[open] .feature-icon {
			transform: rotate(180deg);
		}

		.feature-content {
			padding: 28px;
			line-height: 1.8;
			color: var(--text-dark);
			font-size: 1.2rem;
		}

		/* ===== SECTION HIGHLIGHT MODERNE ===== */
		.highlight-section {
			background: var(--primary-gradient);
			color: white;
			padding: 100px 40px;
			text-align: center;
			margin: 0;
			position: relative;
			overflow: hidden;
			border-radius: 0;
		}

		.highlight-section::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="1" fill="rgba(255,255,255,0.15)"/><circle cx="40" cy="80" r="1.2" fill="rgba(255,255,255,0.08)"/></svg>') repeat;
			animation: float 25s ease-in-out infinite;
		}

		@keyframes float {
			0%, 100% { transform: translateY(0px) rotate(0deg); }
			33% { transform: translateY(-8px) rotate(1deg); }
			66% { transform: translateY(8px) rotate(-1deg); }
		}

		.highlight-content {
			position: relative;
			z-index: 2;
			max-width: 800px;
			margin: 0 auto;
		}

		.highlight-title {
			font-size: clamp(2.5rem, 5vw, 3.5rem);
			font-weight: 800;
			margin-bottom: 24px;
			line-height: 1.2;
			color: white !important;
		}

		.highlight-text {
			font-size: 1.3rem;
			line-height: 1.6;
			opacity: 0.95;
			color: white !important;
		}

		/* ===== LISTES MODERNES ===== */
		.modern-list {
			list-style: none;
			padding: 0;
			margin: 32px 0;
			display: grid;
			gap: 16px;
		}

		.modern-list li {
			background: var(--white);
			padding: 20px 24px 20px 50px;
			border-radius: 16px;
			box-shadow: var(--shadow-light);
			transition: var(--transition);
			position: relative;
			font-size: 1.2rem;
			border: 1px solid rgba(11, 63, 137, 0.1);
		}

		.modern-list li:hover {
			background: var(--bg-light);
			transform: translateY(-4px);
			box-shadow: var(--shadow-medium);
		}

		.modern-list li::before {
			content: '';
			position: absolute;
			left: 24px;
			top: 50%;
			transform: translateY(-50%);
			width: 8px;
			height: 8px;
			background: var(--primary-color);
			border-radius: 50%;
		}

		/* ===== SECTIONS FINALES ===== */
		.final-sections {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
			gap: 60px;
			margin: 120px 0;
			padding: 0 24px;
			align-items: stretch;
		}

		.final-card {
			background: rgba(255, 255, 255, 0.9);
			border-radius: var(--border-radius);
			padding: 50px;
			box-shadow: var(--shadow-medium);
			transition: var(--transition);
			text-align: center;
			position: relative;
			overflow: hidden;
			display: flex;
			flex-direction: column;
			justify-content: space-between;
			min-height: 600px;
		}

		.final-card::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			height: 6px;
			background: var(--primary-gradient);
		}

		.final-card:hover {
			transform: translateY(-12px);
			box-shadow: var(--shadow-heavy);
		}

		.final-card-image {
			width: 120px;
			height: 120px;
			object-fit: contain;
			margin: 0 auto 24px;
			border-radius: 20px;
			background: rgba(11, 63, 137, 0.05);
			padding: 16px;
		}

		.final-card-title {
			font-size: 1.8rem;
			font-weight: 700;
			color: var(--primary-color);
			margin-bottom: 24px;
		}

		.final-card-text {
			font-size: 1.3rem;
			line-height: 1.7;
			color: var(--text-dark);
		}

		/* ===== BOUTON RETOUR HUB ===== */
		.back-to-hub {
			position: fixed;
			top: 180px;
			left: 30px;
			z-index: 1000;
		}

		.back-hub-btn {
			display: flex;
			align-items: center;
			gap: 12px;
			background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
			color: white;
			padding: 16px 24px;
			border-radius: 50px;
			text-decoration: none;
			font-weight: 600;
			font-size: 0.95rem;
			box-shadow: 0 8px 25px rgba(255, 107, 53, 0.3);
			border: 1px solid rgba(255, 107, 53, 0.2);
			transition: var(--transition);
			backdrop-filter: blur(10px);
		}

		.back-hub-btn:hover {
			background: linear-gradient(135deg, #e55a2b 0%, #e8841a 100%);
			color: white;
			transform: translateY(-2px);
			box-shadow: 0 12px 35px rgba(255, 107, 53, 0.4);
		}

		.back-hub-btn svg {
			width: 20px;
			height: 20px;
			transition: var(--transition);
		}

		.back-hub-btn:hover svg {
			transform: translateX(-3px);
		}

		/* ===== RESPONSIVE DESIGN ===== */
		@media (max-width: 1024px) {
			.back-to-hub {
				top: 160px;
				left: 20px;
			}
			
			.back-hub-btn {
				padding: 14px 20px;
				font-size: 0.9rem;
			}
			
			.hero-formation {
				min-height: 40vh;
				padding: 30px 30px;
			}

			.formation-section-row {
				grid-template-columns: 1fr;
				gap: 60px;
				text-align: center;
			}

			.formation-section-row.reverse {
				direction: ltr;
			}

			.section-alternated {
				padding: 80px 0;
			}

			.final-sections {
				grid-template-columns: 1fr;
				gap: 40px;
			}

			.final-card {
				min-height: auto;
			}
		}

		@media (max-width: 768px) {
			.back-to-hub {
				top: 140px;
				left: 15px;
			}
			
			.back-hub-btn {
				padding: 12px 16px;
				font-size: 0.85rem;
			}
			
			.back-hub-btn span {
				display: none;
			}
			
			.back-hub-btn svg {
				width: 18px;
				height: 18px;
			}
			
			.hero-formation {
				min-height: 35vh;
				padding: 25px 20px;
			}

			.hero-title {
				font-size: clamp(2.2rem, 8vw, 3rem);
				margin-bottom: 16px;
			}

			.hero-subtitle {
				font-size: clamp(1.1rem, 4vw, 1.4rem);
				margin-bottom: 30px;
			}

			.main-container,
			.formation-section-row,
			.final-sections {
				padding: 0 20px;
			}

			.section-alternated {
				padding: 60px 0;
			}

			.final-card {
				padding: 32px;
			}

			.formation-section-row {
				gap: 40px;
			}

			.hero-cta {
				padding: 16px 32px;
				font-size: 1rem;
			}
		}

		@media (max-width: 480px) {
			.hero-formation {
				min-height: 30vh;
				padding: 20px 16px;
			}

			.hero-title {
				font-size: clamp(1.8rem, 8vw, 2.5rem);
			}

			.hero-subtitle {
				font-size: clamp(1rem, 4vw, 1.2rem);
			}

			.feature-header {
				padding: 20px 24px;
				font-size: 1.1rem;
			}

			.feature-content {
				padding: 24px;
				font-size: 1.1rem;
			}

			.highlight-section {
				padding: 60px 24px;
			}

			.final-card {
				padding: 24px;
				min-height: auto;
			}

			.final-card-image {
				width: 100px;
				height: 100px;
				margin-bottom: 20px;
			}

			.final-card-title {
				font-size: 1.5rem;
			}

			.modern-list li {
				padding: 16px 20px;
				font-size: 1.1rem;
			}
		}

		/* ===== ANIMATIONS SUPPRIMÉES - AFFICHAGE DIRECT ===== */
	</style>
{% endblock %}

{% block body %}

<!-- Hero Section Moderne -->
