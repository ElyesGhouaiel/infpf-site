{% extends 'base.html.twig' %}

{% block title %}Nos cours par correspondance - INFPF
{% endblock %}

{% block stylesheets %}
	<link href="../css/fichier.css?v=58" rel="stylesheet"/>
    <link href="../css/footer1.css" rel="stylesheet"/>
	<style>
		/* ===== VARIABLES CSS MODERNES ===== */
		:root {
			--primary-color: #0b3f89;
			--primary-light: #1e5cb8;
			--accent-color: #00b4d8;
			--text-dark: #2d3748;
			--text-light: #718096;
			--white: #ffffff;
			--bg-light: #f8fafc;
			--bg-section: #fafbfc;
			--shadow-light: 0 4px 20px rgba(11, 63, 137, 0.1);
			--shadow-medium: 0 8px 30px rgba(11, 63, 137, 0.15);
			--shadow-heavy: 0 15px 50px rgba(11, 63, 137, 0.2);
			--primary-gradient: linear-gradient(135deg, #0b3f89 0%, #1e5cb8 50%, #00b4d8 100%);
			--white-gradient: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
			--transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			--border-radius: 24px;
		}

		/* ===== RESET ET BASE ===== */
		* {
			box-sizing: border-box;
		}

		body {
			font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
			line-height: 1.6;
			color: var(--text-dark);
			background: linear-gradient(180deg, #fafbfc 0%, #f0f4f8 100%);
		}

		/* ===== HERO SECTION MODERNE ===== */
		.cours-hero-formation {
			position: relative;
			min-height: 45vh;
			background: var(--primary-gradient);
			overflow: hidden;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			text-align: center;
			padding: 40px 40px;
		}

		.cours-hero-formation::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: url('{{ asset('img/nos_cours_par_correspondance.png') }}') center center/cover;
			background-repeat: no-repeat;
			opacity: 0.08;
			z-index: 1;
		}

		.cours-hero-formation::after {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse"><path d="M 20 0 L 0 0 0 20" fill="none" stroke="rgba(255,255,255,0.08)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
			z-index: 2;
		}

		.cours-hero-content {
			position: relative;
			z-index: 3;
			color: white;
			max-width: 800px;
			margin: 0 auto;
		}

		.cours-hero-title {
			font-size: clamp(3.2rem, 7vw, 5.2rem);
			font-weight: 800;
			margin-bottom: 28px;
			text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
			letter-spacing: -0.02em;
		}

		.cours-hero-subtitle {
			font-size: clamp(1.5rem, 3.5vw, 2.1rem);
			font-weight: 400;
			margin-bottom: 50px;
			opacity: 0.95;
			line-height: 1.4;
		}

		.cours-hero-cta {
			display: inline-flex;
			align-items: center;
			gap: 12px;
			background: rgba(255, 255, 255, 0.15);
			color: white;
			padding: 18px 36px;
			border-radius: 50px;
			text-decoration: none;
			font-weight: 600;
			font-size: 1.1rem;
			backdrop-filter: blur(10px);
			border: 2px solid rgba(255, 255, 255, 0.2);
			transition: var(--transition);
			text-shadow: none;
		}

		.cours-hero-cta:hover {
			background: rgba(255, 255, 255, 0.25);
			transform: translateY(-2px);
			box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
			color: white;
		}

		/* ===== BREADCRUMBS MODERNES ===== */
		.modern-breadcrumbs {
			background: white;
			padding: 20px 0;
			border-bottom: 1px solid #e2e8f0;
		}

		.breadcrumbs-container {
			max-width: 1200px;
			margin: 0 auto;
			padding: 0 40px;
		}

		.breadcrumbs-list {
			display: flex;
			align-items: center;
			gap: 12px;
			font-size: 0.95rem;
			color: var(--text-light);
		}

		.breadcrumbs-list a {
			color: var(--primary-color);
			text-decoration: none;
			transition: var(--transition);
		}

		.breadcrumbs-list a:hover {
			color: var(--accent-color);
		}

		.breadcrumb-separator {
			color: #cbd5e0;
			font-weight: 600;
		}

		.breadcrumb-current {
			color: var(--text-dark);
			font-weight: 500;
		}

		/* ===== CONTAINER PRINCIPAL ===== */
		.cours-main-container {
			max-width: 1200px;
			margin: 0 auto;
			padding: 80px 40px;
		}

		/* ===== SECTIONS MODERNES ===== */
		.cours-modern-section {
			margin-bottom: 80px;
		}

		.cours-section-header {
			text-align: center;
			margin-bottom: 60px;
		}

		.cours-section-title {
			font-size: clamp(2.2rem, 4vw, 3rem);
			font-weight: 700;
			color: var(--primary-color);
			margin-bottom: 20px;
			line-height: 1.2;
		}

		.cours-section-subtitle {
			font-size: 1.25rem;
			color: var(--text-dark);
			max-width: 900px;
			margin: 24px auto 0;
			line-height: 1.7;
			text-align: center;
			background: linear-gradient(135deg, rgba(248, 250, 252, 0.8) 0%, rgba(241, 245, 249, 0.9) 100%);
			padding: 32px 40px;
			border-radius: 20px;
			border: 1px solid rgba(11, 63, 137, 0.1);
			box-shadow: 0 4px 20px rgba(11, 63, 137, 0.05);
			position: relative;
			overflow: hidden;
		}

		.cours-section-subtitle::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 4px;
			background: var(--primary-gradient);
		}

		/* Style spécial pour le paragraphe de conclusion */
		.cours-conclusion-text {
			font-size: 1.3rem;
			color: var(--text-dark);
			max-width: 1000px;
			margin: 0 auto 40px;
			line-height: 1.7;
			text-align: center;
			background: linear-gradient(135deg, rgba(0, 180, 216, 0.05) 0%, rgba(11, 63, 137, 0.08) 100%);
			padding: 40px 48px;
			border-radius: 24px;
			border: 2px solid rgba(0, 180, 216, 0.15);
			box-shadow: 0 8px 30px rgba(0, 180, 216, 0.1);
			position: relative;
			overflow: hidden;
		}

		.cours-conclusion-text::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 6px;
			background: linear-gradient(90deg, #00b4d8 0%, #0b3f89 50%, #1e5cb8 100%);
		}

		.cours-conclusion-text::after {
			content: '';
			position: absolute;
			top: 50%;
			right: -50px;
			width: 100px;
			height: 100px;
			background: radial-gradient(circle, rgba(0, 180, 216, 0.1) 0%, transparent 70%);
			border-radius: 50%;
			transform: translateY(-50%);
		}

		/* ===== LAYOUT ZIGZAG ALTERNÉ ===== */
		.cours-section-row {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 80px;
			align-items: center;
			margin-bottom: 80px;
		}

		.cours-section-row.reverse {
			direction: rtl;
		}

		.cours-section-row.reverse > * {
			direction: ltr;
		}

		.cours-section-content h2 {
			font-size: clamp(2.2rem, 4vw, 2.8rem);
			font-weight: 700;
			color: var(--primary-color);
			margin-bottom: 28px;
			line-height: 1.3;
		}

		.cours-section-content p {
			font-size: 1.25rem;
			line-height: 1.7;
			color: var(--text-dark);
			margin-bottom: 24px;
		}

		.cours-section-content ul {
			list-style: none;
			padding: 0;
			margin: 0;
		}

		.cours-section-content li {
			position: relative;
			padding-left: 24px;
			margin-bottom: 12px;
			color: var(--text-dark);
			line-height: 1.6;
		}

		.cours-section-content li::before {
			content: '';
			position: absolute;
			left: 0;
			top: 0.6em;
			width: 6px;
			height: 6px;
			background: var(--primary-color);
			border-radius: 50%;
		}

		.cours-section-content li strong {
			color: var(--primary-color);
		}

		.cours-section-image {
			position: relative;
			border-radius: var(--border-radius);
			overflow: hidden;
			box-shadow: var(--shadow-medium);
		}

		.cours-section-image img {
			width: 100%;
			height: auto;
			transition: var(--transition);
		}

		.cours-section-image:hover img {
			transform: scale(1.05);
		}

		/* ===== FEATURES SECTION ===== */
		.cours-features-section {
			background: var(--white-gradient);
			padding: 80px 60px;
			margin: 80px -40px;
			border-radius: var(--border-radius);
			box-shadow: var(--shadow-light);
		}

		.cours-features-title {
			font-size: clamp(2.4rem, 4.5vw, 3.2rem);
			font-weight: 700;
			color: var(--primary-color);
			margin-bottom: 24px;
			text-align: center;
		}

		.cours-features-description {
			font-size: 1.35rem;
			color: var(--text-light);
			text-align: center;
			margin-bottom: 50px;
			max-width: 800px;
			margin-left: auto;
			margin-right: auto;
		}

		.cours-features-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
			gap: 30px;
		}

		.cours-feature-card {
			background: white;
			padding: 32px;
			border-radius: 20px;
			box-shadow: var(--shadow-light);
			transition: var(--transition);
			border: 1px solid rgba(11, 63, 137, 0.1);
		}

		.cours-feature-card:hover {
			transform: translateY(-8px);
			box-shadow: var(--shadow-medium);
		}

		.cours-feature-icon {
			width: 80px;
			height: 80px;
			background: var(--primary-gradient);
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			margin-bottom: 20px;
			color: white;
			font-size: 24px;
			box-shadow: 0 6px 20px rgba(11, 63, 137, 0.15);
			position: relative;
			overflow: hidden;
			transition: var(--transition);
		}

		.cours-feature-icon::before {
			content: '';
			position: absolute;
			top: -50%;
			left: -50%;
			width: 200%;
			height: 200%;
			background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
			animation: float 3s ease-in-out infinite alternate;
		}

		.cours-feature-icon svg {
			width: 32px;
			height: 32px;
			display: block;
			z-index: 2;
			position: relative;
		}

		.cours-feature-card h3 {
			font-size: 1.3rem;
			font-weight: 700;
			color: var(--primary-color);
			margin-bottom: 16px;
		}

		.cours-feature-card p {
			color: var(--text-dark);
			line-height: 1.6;
			margin: 0;
		}

		/* ===== HIGHLIGHT SECTION ===== */
		.cours-highlight-section {
			background: var(--primary-gradient);
			padding: 80px 40px;
			margin: 80px -40px;
			border-radius: var(--border-radius);
			color: white;
			text-align: center;
		}

		.cours-highlight-title {
			font-size: clamp(2rem, 4vw, 2.8rem);
			font-weight: 700;
			margin-bottom: 24px;
			color: white;
		}

		.cours-highlight-content {
			font-size: 1.2rem;
			opacity: 0.95;
			max-width: 900px;
			margin: 0 auto;
		}

		/* ===== CERTIFICATION BADGE ===== */
		.cours-certification-badge {
			display: inline-flex;
			align-items: center;
			gap: 16px;
			background: linear-gradient(135deg, #e8f5e8 0%, #f0fdf4 100%);
			color: #166534;
			padding: 24px 32px;
			border-radius: 16px;
			font-weight: 600;
			font-size: 1.1rem;
			border: 2px solid #bbf7d0;
			margin: 0 auto 40px;
			box-shadow: 0 8px 25px rgba(34, 197, 94, 0.1);
			transition: var(--transition);
			position: relative;
			overflow: hidden;
		}

		.cours-certification-badge::before {
			content: '';
			position: absolute;
			top: 0;
			left: -100%;
			width: 100%;
			height: 100%;
			background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
			animation: shimmer 2s infinite;
		}

		@keyframes shimmer {
			0% { left: -100%; }
			100% { left: 100%; }
		}

		.cours-certification-badge:hover {
			transform: translateY(-3px);
			box-shadow: 0 12px 35px rgba(34, 197, 94, 0.15);
			border-color: #86efac;
		}

		.certification-icon {
			width: 36px;
			height: 36px;
			background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			color: white;
			font-size: 14px;
			box-shadow: 0 4px 12px rgba(34, 197, 94, 0.3);
			flex-shrink: 0;
			position: relative;
			overflow: hidden;
		}

		.certification-icon::before {
			content: '';
			position: absolute;
			top: -50%;
			left: -50%;
			width: 200%;
			height: 200%;
			background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%);
			animation: float 3s ease-in-out infinite alternate;
		}

		.certification-icon svg {
			width: 20px;
			height: 20px;
			z-index: 2;
			position: relative;
		}

		/* ===== ILLUSTRATIONS MODERNES ===== */
		.modern-illustration {
			display: flex;
			flex-direction: column;
			align-items: center;
			text-align: center;
			padding: 40px 30px;
			background: linear-gradient(135deg, rgba(248, 250, 252, 0.8) 0%, rgba(241, 245, 249, 0.9) 100%);
			border-radius: 24px;
			border: 1px solid rgba(11, 63, 137, 0.1);
			transition: var(--transition);
		}

		.modern-illustration:hover {
			transform: translateY(-5px);
			box-shadow: 0 20px 40px rgba(11, 63, 137, 0.15);
		}

		.illustration-circle {
			width: 160px;
			height: 160px;
			background: var(--primary-gradient);
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			margin-bottom: 24px;
			color: white;
			position: relative;
			overflow: hidden;
			box-shadow: 0 8px 25px rgba(11, 63, 137, 0.2);
		}

		.illustration-circle svg {
			width: 80px;
			height: 80px;
			display: block;
		}

		.illustration-circle::before {
			content: '';
			position: absolute;
			top: -50%;
			left: -50%;
			width: 200%;
			height: 200%;
			background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
			animation: float 3s ease-in-out infinite alternate;
		}

		@keyframes float {
			0% { transform: translateY(0px) rotate(0deg); }
			100% { transform: translateY(-10px) rotate(5deg); }
		}

		.modern-illustration h3 {
			font-size: 1.4rem;
			font-weight: 700;
			color: var(--primary-color);
			margin-bottom: 12px;
		}

		.modern-illustration p {
			font-size: 1rem;
			color: var(--text-light);
			margin: 0;
			line-height: 1.5;
		}

		/* ===== BOUTONS MODERNES ===== */
		.modern-button {
			display: inline-flex;
			align-items: center;
			gap: 12px;
			background: var(--primary-gradient);
			color: white;
			padding: 16px 32px;
			border-radius: 50px;
			text-decoration: none;
			font-weight: 600;
			font-size: 1rem;
			transition: var(--transition);
			border: none;
			cursor: pointer;
		}

		.modern-button:hover {
			transform: translateY(-2px);
			box-shadow: var(--shadow-medium);
			color: white;
		}

		/* ===== BOUTON RETOUR HUB ===== */
		.back-to-hub {
			position: fixed;
			top: 180px;
			left: 30px;
			z-index: 1000;
		}

		.back-hub-btn {
			display: flex;
			align-items: center;
			gap: 12px;
			background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
			color: white;
			padding: 16px 24px;
			border-radius: 50px;
			text-decoration: none;
			font-weight: 600;
			font-size: 0.95rem;
			box-shadow: 0 8px 25px rgba(255, 107, 53, 0.3);
			border: 1px solid rgba(255, 107, 53, 0.2);
			transition: var(--transition);
			backdrop-filter: blur(10px);
		}

		.back-hub-btn:hover {
			background: linear-gradient(135deg, #e55a2b 0%, #e8841a 100%);
			color: white;
			transform: translateY(-2px);
			box-shadow: 0 12px 35px rgba(255, 107, 53, 0.4);
		}

		.back-hub-btn svg {
			width: 20px;
			height: 20px;
			transition: var(--transition);
		}

		.back-hub-btn:hover svg {
			transform: translateX(-3px);
		}

		/* ===== RESPONSIVE DESIGN ===== */
		@media (max-width: 1024px) {
			.cours-hero-formation {
				min-height: 40vh;
				padding: 30px 30px;
			}

			.cours-section-row {
				grid-template-columns: 1fr;
				gap: 60px;
				text-align: center;
			}

			.cours-section-row.reverse {
				direction: ltr;
			}

			.cours-main-container {
				padding: 60px 30px;
			}

			.cours-features-grid {
				grid-template-columns: 1fr;
				gap: 20px;
			}

			.cours-features-section {
				padding: 60px 40px;
			}

			.cours-certification-badge {
				font-size: 1rem;
				padding: 20px 28px;
				margin-bottom: 32px;
			}

			.certification-icon {
				width: 32px;
				height: 32px;
			}

			.certification-icon svg {
				width: 18px;
				height: 18px;
			}

			.cours-section-subtitle {
				padding: 28px 32px;
				font-size: 1.15rem;
				margin: 20px auto 0;
			}

			.cours-conclusion-text {
				padding: 32px 36px;
				font-size: 1.2rem;
				margin-bottom: 32px;
			}

			.cours-feature-icon {
				width: 70px;
				height: 70px;
			}

			.cours-feature-icon svg {
				width: 28px;
				height: 28px;
			}

			.illustration-circle {
				width: 140px;
				height: 140px;
			}

			.illustration-circle svg {
				width: 70px;
				height: 70px;
			}
		}

		@media (max-width: 768px) {
			.cours-hero-formation {
				min-height: 35vh;
				padding: 25px 20px;
			}

			.cours-hero-title {
				font-size: clamp(2.2rem, 8vw, 3rem);
				margin-bottom: 16px;
			}

			.cours-hero-subtitle {
				font-size: clamp(1.1rem, 4vw, 1.4rem);
				margin-bottom: 30px;
			}

			.cours-main-container,
			.cours-section-row,
			.cours-features-section,
			.cours-highlight-section {
				padding: 0 20px;
			}

			.cours-modern-section {
				margin-bottom: 60px;
			}

			.cours-section-header {
				margin-bottom: 40px;
			}

			.cours-feature-card {
				padding: 24px;
			}

			.cours-features-section {
				padding: 40px 20px;
			}

			.cours-hero-cta {
				padding: 16px 32px;
				font-size: 1rem;
			}

			.cours-certification-badge {
				font-size: 0.95rem;
				padding: 18px 24px;
				gap: 12px;
				margin-bottom: 28px;
			}

			.certification-icon {
				width: 28px;
				height: 28px;
			}

			.certification-icon svg {
				width: 16px;
				height: 16px;
			}

			.cours-section-subtitle {
				padding: 24px 28px;
				font-size: 1.1rem;
				margin: 16px auto 0;
			}

			.cours-conclusion-text {
				padding: 28px 32px;
				font-size: 1.15rem;
				margin-bottom: 28px;
			}

			.cours-feature-icon {
				width: 60px;
				height: 60px;
			}

			.cours-feature-icon svg {
				width: 24px;
				height: 24px;
			}

			.illustration-circle {
				width: 120px;
