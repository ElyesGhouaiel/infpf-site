{% extends 'base.html.twig' %}

{% block title %}Pourquoi choisir l'INFPF ? - Formation à distance
{% endblock %}

{% block stylesheets %}
	<link href="../css/fichier.css?v=58" rel="stylesheet"/>
    <link href="../css/footer1.css" rel="stylesheet"/>
	<style>
		/* ===== VARIABLES CSS MODERNES ===== */
		:root {
			--primary-color: #0b3f89;
			--primary-light: #1e5cb8;
			--accent-color: #00b4d8;
			--text-dark: #2d3748;
			--text-light: #718096;
			--white: #ffffff;
			--bg-light: #f8fafc;
			--bg-section: #fafbfc;
			--shadow-light: 0 4px 20px rgba(11, 63, 137, 0.1);
			--shadow-medium: 0 8px 30px rgba(11, 63, 137, 0.15);
			--shadow-heavy: 0 15px 50px rgba(11, 63, 137, 0.2);
			--primary-gradient: linear-gradient(135deg, #0b3f89 0%, #1e5cb8 50%, #00b4d8 100%);
			--white-gradient: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
			--transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			--border-radius: 24px;
		}

		/* ===== RESET ET BASE ===== */
		* {
			box-sizing: border-box;
		}

		body {
			font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
			line-height: 1.6;
			color: var(--text-dark);
			background: linear-gradient(180deg, #fafbfc 0%, #f0f4f8 100%);
		}

		/* ===== HERO SECTION MODERNE ===== */
		.hero-formation {
			position: relative;
			min-height: 45vh;
			background: var(--primary-gradient);
			overflow: hidden;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			text-align: center;
			padding: 40px 40px;
		}

		.hero-formation::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: url('{{ asset('img/4.png') }}') center center/contain;
			background-repeat: no-repeat;
			opacity: 0.08;
			z-index: 1;
		}

		.hero-formation::after {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse"><path d="M 20 0 L 0 0 0 20" fill="none" stroke="rgba(255,255,255,0.08)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
			z-index: 2;
		}

		.hero-content {
			position: relative;
			z-index: 3;
			color: white;
			max-width: 800px;
			margin: 0 auto;
		}

		.hero-title {
			font-size: clamp(2.8rem, 6vw, 4.5rem);
			font-weight: 800;
			margin-bottom: 24px;
			text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
			letter-spacing: -0.02em;
		}

		.hero-subtitle {
			font-size: clamp(1.3rem, 3vw, 1.8rem);
			font-weight: 400;
			margin-bottom: 50px;
			opacity: 0.95;
			line-height: 1.4;
		}

		.hero-cta {
			display: inline-flex;
			align-items: center;
			gap: 12px;
			background: rgba(255, 255, 255, 0.15);
			color: white;
			padding: 18px 36px;
			border-radius: 50px;
			text-decoration: none;
			font-weight: 600;
			font-size: 1.1rem;
			backdrop-filter: blur(10px);
			border: 2px solid rgba(255, 255, 255, 0.2);
			transition: var(--transition);
			text-shadow: none;
		}

		.hero-cta:hover {
			background: rgba(255, 255, 255, 0.25);
			transform: translateY(-2px);
			box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
			color: white;
		}

		/* ===== BREADCRUMBS MODERNES ===== */
		.modern-breadcrumbs {
			background: white;
			padding: 20px 0;
			border-bottom: 1px solid #e2e8f0;
		}

		.breadcrumbs-container {
			max-width: 1200px;
			margin: 0 auto;
			padding: 0 40px;
		}

		.breadcrumbs-list {
			display: flex;
			align-items: center;
			gap: 12px;
			font-size: 0.95rem;
			color: var(--text-light);
		}

		.breadcrumbs-list a {
			color: var(--primary-color);
			text-decoration: none;
			transition: var(--transition);
		}

		.breadcrumbs-list a:hover {
			color: var(--accent-color);
		}

		.breadcrumb-separator {
			color: #cbd5e0;
			font-weight: 600;
		}

		.breadcrumb-current {
			color: var(--text-dark);
			font-weight: 500;
		}

		/* ===== CONTAINER PRINCIPAL ===== */
		.main-container {
			max-width: 1200px;
			margin: 0 auto;
			padding: 80px 40px;
		}

		/* ===== SECTIONS MODERNES ===== */
		.modern-section {
			margin-bottom: 80px;
		}

		.section-header {
			text-align: center;
			margin-bottom: 60px;
		}

		.section-title {
			font-size: clamp(2.8rem, 5vw, 4rem);
			font-weight: 800;
			color: var(--primary-color);
			margin-bottom: 32px;
			line-height: 1.2;
			letter-spacing: -0.02em;
		}

		.section-subtitle {
			font-size: clamp(1.4rem, 2.5vw, 1.8rem);
			color: var(--text-dark);
			max-width: 900px;
			margin: 0 auto;
			line-height: 1.6;
			font-weight: 400;
		}

		/* ===== PARAGRAPHE INTRODUCTION MODERNE ===== */
		.intro-highlight {
			background: linear-gradient(135deg, rgba(248, 250, 252, 0.95) 0%, rgba(241, 245, 249, 0.98) 100%);
			padding: 40px 50px;
			border-radius: 24px;
			border-left: 6px solid var(--primary-color);
			box-shadow: 
				0 20px 60px rgba(11, 63, 137, 0.08),
				0 8px 25px rgba(0, 0, 0, 0.04),
				0 2px 8px rgba(0, 0, 0, 0.02);
			margin: 60px auto;
			position: relative;
			overflow: hidden;
			border: 1px solid rgba(11, 63, 137, 0.08);
			backdrop-filter: blur(20px);
		}

		.intro-highlight::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			height: 4px;
			background: linear-gradient(90deg, var(--primary-color) 0%, var(--accent-color) 100%);
			border-radius: 24px 24px 0 0;
		}

		.intro-highlight::after {
			content: '';
			position: absolute;
			bottom: 20px;
			right: 20px;
			width: 60px;
			height: 60px;
			background: radial-gradient(circle, rgba(11, 63, 137, 0.05) 0%, transparent 70%);
			border-radius: 50%;
			z-index: 0;
		}

		.intro-highlight p {
			margin: 0;
			font-size: clamp(1.4rem, 2.5vw, 1.8rem);
			line-height: 1.7;
			color: var(--text-dark);
			font-weight: 400;
			z-index: 2;
			position: relative;
		}

		.intro-highlight strong {
			color: var(--primary-color);
			font-weight: 700;
		}

		/* ===== LAYOUT ZIGZAG ALTERNÉ ===== */
		.pourquoi-section-row {
			display: grid;
			grid-template-columns: 1.2fr 1.8fr;
			gap: 40px;
			align-items: center;
			margin: 80px 0;
			padding: 40px 30px;
			position: relative;
			border-radius: 20px;
			background: linear-gradient(135deg, rgba(248, 250, 252, 0.4) 0%, rgba(241, 245, 249, 0.6) 100%);
		}

		.pourquoi-section-row::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			height: 4px;
			background: var(--primary-gradient);
			border-radius: 24px 24px 0 0;
		}

		.pourquoi-section-row.reverse {
			grid-template-columns: 1.8fr 1.2fr;
			background: linear-gradient(135deg, rgba(240, 248, 255, 0.4) 0%, rgba(230, 245, 255, 0.6) 100%);
		}

		.pourquoi-section-row.reverse .section-content {
			order: 2;
		}

		.pourquoi-section-row.reverse .section-image {
			order: 1;
		}

		.section-content h2 {
			font-size: clamp(1.8rem, 3vw, 2.4rem);
			font-weight: 700;
			color: var(--primary-color);
			margin-bottom: 24px;
			line-height: 1.3;
		}

		.section-content p {
			font-size: clamp(1.2rem, 2vw, 1.5rem);
			line-height: 1.7;
			color: var(--text-dark);
			margin-bottom: 24px;
			font-weight: 400;
		}

		.section-image {
			position: relative;
			border-radius: 16px;
			overflow: hidden;
			box-shadow: 
				0 12px 32px rgba(11, 63, 137, 0.12),
				0 4px 12px rgba(11, 63, 137, 0.08);
			background: linear-gradient(145deg, #ffffff 0%, #f8fafc 100%);
			aspect-ratio: 16/9;
			width: 100%;
			display: flex;
			align-items: center;
			justify-content: center;
			transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		}

		.section-image::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: linear-gradient(45deg, rgba(11, 63, 137, 0.02) 0%, rgba(59, 130, 246, 0.02) 100%);
			z-index: 1;
			border-radius: 12px;
		}

		.section-image::after {
			content: '';
			position: absolute;
			top: -2px;
			left: -2px;
			right: -2px;
			bottom: -2px;
			background: var(--primary-gradient);
			border-radius: 18px;
			z-index: -1;
			opacity: 0;
			transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		}

		.section-image img {
			width: 100%;
			height: 100%;
			object-fit: cover;
			object-position: center;
			transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			border-radius: 12px;
			z-index: 2;
			position: relative;
			filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
		}

		.section-image:hover {
			transform: translateY(-4px) scale(1.01);
			box-shadow: 
				0 20px 50px rgba(11, 63, 137, 0.15),
				0 8px 20px rgba(11, 63, 137, 0.1);
		}

		.section-image:hover::after {
			opacity: 1;
		}

		.section-image:hover img {
			transform: scale(1.02);
			filter: drop-shadow(0 6px 12px rgba(0, 0, 0, 0.15));
		}

		/* ===== RÉSEAU DE PARTENAIRES ===== */
		.partners-network {
			width: 100%;
			display: flex;
			align-items: center;
			justify-content: center;
		}

		.network-grid {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			gap: 24px;
			width: 100%;
			max-width: 100%;
		}

		.network-item {
			background: linear-gradient(145deg, #ffffff 0%, #f8fafc 100%);
			border-radius: 16px;
			padding: 24px 16px;
			text-align: center;
			transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			border: 1px solid rgba(226, 232, 240, 0.8);
			position: relative;
			overflow: hidden;
		}

		.network-item::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			height: 3px;
			background: var(--primary-gradient);
			transform: scaleX(0);
			transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		}

		.network-item:hover::before {
			transform: scaleX(1);
		}

		.network-item:hover {
			transform: translateY(-4px);
			box-shadow: 
				0 12px 25px rgba(11, 63, 137, 0.1),
				0 4px 10px rgba(11, 63, 137, 0.05);
			border-color: rgba(11, 63, 137, 0.2);
		}

		.network-icon {
			width: 56px;
			height: 56px;
			background: var(--primary-gradient);
			border-radius: 16px;
			display: flex;
			align-items: center;
			justify-content: center;
			margin: 0 auto 16px;
			transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		}

		.network-icon svg {
			color: white;
			width: 32px;
			height: 32px;
		}

		.network-item:hover .network-icon {
			transform: scale(1.1) rotate(5deg);
			box-shadow: 0 8px 20px rgba(11, 63, 137, 0.3);
		}

		.network-item h4 {
			font-size: clamp(1.3rem, 2.5vw, 1.5rem);
			font-weight: 700;
			color: var(--primary-color);
			margin-bottom: 12px;
			line-height: 1.3;
		}

		.network-item p {
			font-size: clamp(1.1rem, 2vw, 1.3rem);
			color: var(--text-dark);
			line-height: 1.5;
			margin: 0;
			opacity: 0.9;
			font-weight: 500;
		}

		/* ===== CARTES AVANTAGES ===== */
		.advantage-cards {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
			gap: 40px;
			margin: 60px 0;
		}

		.advantage-card {
			background: var(--white-gradient);
			padding: 50px 40px;
			border-radius: var(--border-radius);
			box-shadow: var(--shadow-light);
			border: 1px solid rgba(11, 63, 137, 0.1);
			transition: var(--transition);
			text-align: center;
			position: relative;
			overflow: hidden;
		}

		.advantage-card::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			height: 4px;
			background: var(--primary-gradient);
			border-radius: var(--border-radius) var(--border-radius) 0 0;
		}

		.advantage-card::after {
			content: '';
			position: absolute;
			bottom: -5px;
			left: 50%;
			transform: translateX(-50%);
			width: 0;
			height: 0;
			border-left: 10px solid transparent;
			border-right: 10px solid transparent;
			border-top: 10px solid var(--primary-color);
			opacity: 0;
			transition: var(--transition);
		}

		.advantage-card:hover::after {
			opacity: 0.7;
			bottom: -10px;
		}

		.advantage-card:hover {
			transform: translateY(-8px);
			box-shadow: var(--shadow-heavy);
		}

		.advantage-icon {
			width: 80px;
			height: 80px;
			background: var(--primary-gradient);
			border-radius: 20px;
			display: flex;
			align-items: center;
			justify-content: center;
			margin: 0 auto 32px;
			color: white;
			font-size: 28px;
		}

		.advantage-icon svg {
			width: 32px;
			height: 32px;
			fill: currentColor;
		}

		.advantage-card h3 {
			font-size: clamp(1.6rem, 2.5vw, 1.9rem);
			font-weight: 800;
			color: var(--primary-color);
			margin-bottom: 20px;
			line-height: 1.3;
		}

		.advantage-card p {
			color: var(--text-dark);
			line-height: 1.7;
			margin-bottom: 0;
			font-size: clamp(1.1rem, 2vw, 1.3rem);
			font-weight: 400;
		}

		/* ===== SECTION STATS ===== */
		.stats-section {
			background: var(--white-gradient);
			padding: 80px 40px;
			margin: 80px -40px;
			border-radius: var(--border-radius);
			box-shadow: var(--shadow-light);
			text-align: center;
			position: relative;
			overflow: hidden;
		}

		.stats-section::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			height: 6px;
			background: var(--primary-gradient);
		}

		.stats-grid {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			gap: 40px;
			margin-top: 60px;
			max-width: 1000px;
			margin-left: auto;
			margin-right: auto;
		}

		.stat-item {
			text-align: center;
			padding: 20px;
			border-radius: 16px;
			transition: var(--transition);
			position: relative;
		}

		.stat-item:hover {
			transform: translateY(-3px);
			background: rgba(11, 63, 137, 0.05);
		}

		.stat-number {
			font-size: clamp(3.5rem, 6vw, 4.5rem);
			font-weight: 900;
			color: var(--primary-color);
			display: block;
			margin-bottom: 12px;
			line-height: 1;
		}

		.stat-label {
			font-size: clamp(1.2rem, 2vw, 1.4rem);
			color: var(--text-dark);
			font-weight: 500;
		}

		/* ===== HIGHLIGHT SECTION ===== */
		.highlight-section {
			background: var(--primary-gradient);
			padding: 80px 40px;
			margin: 80px -40px;
			border-radius: var(--border-radius);
			color: #ffffff;
			text-align: center;
			position: relative;
			overflow: hidden;
		}

		.highlight-section::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: rgba(0, 0, 0, 0.15);
			z-index: 1;
		}

		.highlight-section > * {
			position: relative;
			z-index: 2;
		}

		.highlight-title {
			font-size: clamp(2.4rem, 5vw, 3.5rem);
			font-weight: 800;
			margin-bottom: 32px;
			line-height: 1.3;
			color: #ffffff !important;
			text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
		}

		.highlight-content {
			font-size: clamp(1.3rem, 2.5vw, 1.7rem);
			max-width: 900px;
			margin: 0 auto;
			line-height: 1.6;
		}

		.highlight-content p {
			margin-bottom: 24px;
			color: #ffffff !important;
			text-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
		}

		.highlight-content strong {
			color: #ffffff !important;
			font-weight: 700;
		}

		/* ===== BOUTONS MODERNES ===== */
		.modern-button {
			display: inline-flex;
			align-items: center;
			gap: 12px;
			background: var(--primary-gradient);
			color: white;
			padding: 16px 32px;
			border-radius: 50px;
			text-decoration: none;
			font-weight: 600;
			font-size: 1rem;
			transition: var(--transition);
			border: none;
			cursor: pointer;
		}

		.modern-button:hover {
			transform: translateY(-2px);
			box-shadow: var(--shadow-medium);
			color: white;
		}

		/* ===== BOUTON RETOUR HUB ===== */
		.back-to-hub {
			position: fixed;
			top: 180px;
			left: 30px;
			z-index: 1000;
		}

		.back-hub-btn {
			display: flex;
			align-items: center;
			gap: 12px;
			background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
			color: white;
			padding: 16px 24px;
			border-radius: 50px;
			text-decoration: none;
			font-weight: 600;
			font-size: 0.95rem;
			box-shadow: 0 8px 25px rgba(255, 107, 53, 0.3);
			border: 1px solid rgba(255, 107, 53, 0.2);
			transition: var(--transition);
			backdrop-filter: blur(10px);
		}

		.back-hub-btn:hover {
			background: linear-gradient(135deg, #e55a2b 0%, #e8841a 100%);
			color: white;
			transform: translateY(-2px);
			box-shadow: 0 12px 35px rgba(255, 107, 53, 0.4);
		}

		.back-hub-btn svg {
			width: 20px;
			height: 20px;
			transition: var(--transition);
		}

		.back-hub-btn:hover svg {
			transform: translateX(-3px);
		}

		/* ===== RESPONSIVE DESIGN ===== */
		@media (max-width: 1200px) {
			.pourquoi-section-row {
				grid-template-columns: 1.1fr 1.6fr;
				gap: 30px;
				padding: 35px 25px;
			}

			.pourquoi-section-row.reverse {
				grid-template-columns: 1.6fr 1.1fr;
			}
		}

		@media (max-width: 1024px) {
			.back-to-hub {
				top: 160px;
				left: 20px;
			}
			
			.back-hub-btn {
				padding: 14px 20px;
				font-size: 0.9rem;
			}
			
			.hero-formation {
				min-height: 40vh;
				padding: 30px 30px;
			}

			.pourquoi-section-row {
				grid-template-columns: 1fr;
				gap: 40px;
				text-align: left;
				padding: 30px 20px;
				margin: 50px 0;
			}

			.pourquoi-section-row.reverse .section-content {
				order: 1;
			}

			.pourquoi-section-row.reverse .section-image {
				order: 2;
			}

			.section-image {
				margin: 0 auto;
				aspect-ratio: 16/9;
				width: 100%;
			}

			.main-container {
				padding: 60px 30px;
			}

			.advantage-cards {
				grid-template-columns: 1fr;
				gap: 30px;
			}

			.stats-grid {
