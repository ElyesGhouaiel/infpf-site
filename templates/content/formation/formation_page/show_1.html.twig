{% extends 'base.html.twig' %}

{% block title %}Détail d'une Formation{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Détail de la formation</h1>

        {% for formation in formations %}
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ formation.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Nom</th>
                        <td>{{ formation.nameFormation }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Description</th>
                        <td>{{ formation.descriptionFormation }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Durée (heures)</th>
                        <td>{{ formation.dureeFormation }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Prix (€)</th>
                        <td>{{ formation.priceFormation | number_format(2, ',', ' ') }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Numéro RNCP</th>
                        <td>{{ formation.numeroRncp ?? 'Non défini' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Certificateur</th>
                        <td>{{ formation.Certificateur }}</td>
                         
                    
                    </tr>
                </tbody>
            </table>

            <div class="mt-3">
                <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à la liste</a>

                {% if is_granted("ROLE_ADMIN") %}
                    <a href="{{ path('app_formation_edit', {'id': formation.id}) }}" class="btn btn-primary">Modifier</a>
                    {{ include('content/formation/_delete_form.html.twig') }}
                {% endif %}
            </div>
        {% else %}
            <div class="alert alert-info">Aucune formation trouvée.</div>
        {% endfor %}
    </div>
{% endblock %}
