{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <h1>Formation</h1>

    <table class="table">
        <tbody>
            {% for formations in formations %}
            <tr>
                <th>Id</th>
                <td>{{ formations.id }}</td>
            </tr>
            <tr>
                <th>Name_formation</th>
                <td>{{ formations.nameFormation }}</td>
            </tr>
            <tr>
                <th>Description_formation</th>
                <td>{{ formations.descriptionFormation }}</td>
            </tr>
            <tr>
                <th>Duree_formation</th>
                <td>{{ formations.dureeFormation }}</td>
            </tr>
            <tr>
                <th>Price_formation</th>
                <td>{{ formations.priceFormation }}</td>
            </tr>
                        {% endfor %}

        </tbody>
    </table>

    <a href="{{ path('app_home') }}">back to list</a>

    {% if is_granted("ROLE_ADMIN") %}

    <a href="{{ path('app_formation_edit', {'id': formations.id}) }}">edit</a>

    {{ include('content/formation/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}