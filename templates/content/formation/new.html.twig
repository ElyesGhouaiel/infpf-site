{% extends 'base.html.twig' %}

{% block title %}Créer une Nouvelle Formation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/newFormation.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="form-container">
            <h1>Créer une Nouvelle Formation</h1>
            <form method="post">
                <div class="form-group">
                    {{ form_label(form.nameFormation) }}
                    {{ form_widget(form.nameFormation, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.descriptionFormation) }}
                    {{ form_widget(form.descriptionFormation, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.dureeFormation) }}
                    {{ form_widget(form.dureeFormation, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.priceFormation) }}
                    {{ form_widget(form.priceFormation, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.phraseOne) }}
                    {{ form_widget(form.phraseOne, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.presentation) }}
                    {{ form_widget(form.presentation, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.prerequis) }}
                    {{ form_widget(form.prerequis, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.atouts) }}
                    {{ form_widget(form.atouts, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.modalites_pedagogique) }}
                    {{ form_widget(form.modalites_pedagogique, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.evaluation) }}
                    {{ form_widget(form.evaluation, { 'attr': {'class': 'form-control'} }) }}
                </div>
                {{ form_row(form._token) }} <!-- S'assurer que le jeton CSRF est inclus -->

                <button type="submit" class="btn btn-primary">Créer</button>
            </form>
        </div>

        <div class="text-center mt-3">
            <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>
{% endblock %}
