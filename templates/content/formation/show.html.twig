}

/* √âtat actif du lien - PROGRESSION UTILISATEUR */
#toc nav a.is-active {
    background: linear-gradient(135deg, 
        rgba(59, 130, 246, 0.2), 
        rgba(99, 179, 237, 0.15));
    border-color: rgba(59, 130, 246, 0.4);
