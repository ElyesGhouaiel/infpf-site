        // Toutes les sections avec ancres *-start
        const sections = document.querySelectorAll('[id$="-start"]');
        const tocLinks = document.querySelectorAll('#toc a[href^="#"]');
        
        if(sections.length === 0 || tocLinks.length === 0) {
            console.log('‚ùå Sections ou liens TOC non trouv√©s');
            return;
        }

        // Cr√©er une map href -> lien pour la performance
        const linkMap = new Map();
        tocLinks.forEach(link => {
            const href = link.getAttribute('href');
            if(href) linkMap.set(href, link);
        });

        // IntersectionObserver pour d√©tecter la section visible
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if(entry.isIntersecting) {
                    // Retirer is-active de tous les liens
                    tocLinks.forEach(link => link.classList.remove('is-active'));
                    
                    // Ajouter is-active au lien correspondant
                    const href = '#' + entry.target.id;
                    const activeLink = linkMap.get(href);
                    if(activeLink) {
                        activeLink.classList.add('is-active');
                        console.log('üìç Section active:', entry.target.id, '-> Lien mis en bleu');
                    }
                }
            });
        }, {
            // Zone de d√©tection : 30% du viewport au centre
            rootMargin: '-35% 0px -35% 0px',
            threshold: 0.1
        });

        // Observer toutes les sections
        sections.forEach(section => observer.observe(section));
        
        console.log('‚úÖ Scroll-spy actif sur', sections.length, 'sections');
    }

    // init + √©v√®nements
    function init(){
        console.log('üéØ TOC System: Initialisation');
        
        // V√©rifier les √©l√©ments g√©r√©s
        const heroDetails = document.querySelector('.details-card--hero');
        const sideDetails = document.querySelector('.layout-formation .details-card:not(.details-card--hero)');
        console.log('üè† D√©tails HERO (fixe):', !!heroDetails);
        console.log('üìú D√©tails C√îT√â (floating):', !!sideDetails);
        
        positionLeft();
        positionRight();
        onScroll();
        onScrollDetails();
        wireLinks();
        initScrollSpy(); // Ajout du scroll-spy dynamique
        console.log('‚úÖ TOC System: Pr√™t avec scroll-spy dynamique');
    }

    console.log('üîß TOC: Ajout des event listeners');
    console.log('üîß TOC: readyState =', document.readyState);
    
    // Debug: lister tous les √©l√©ments avec id
    console.log('üîß TOC: √âl√©ments avec ID:', Array.from(document.querySelectorAll('[id]')).map(el => el.id));
    
    // Attendre que le DOM soit pr√™t
    function waitForElements(attempt = 1) {
        console.log(`üîß TOC: Tentative ${attempt} de recherche des √©l√©ments`);
        
        const toc = document.getElementById('toc');
        const anchor = document.getElementById('toc-anchor');
        const details = document.querySelector('.details-card');
        
        console.log('üîç TOC trouv√©:', !!toc, toc);
        console.log('üîç Anchor trouv√©:', !!anchor, anchor);
        console.log('üîç Details trouv√©:', !!details, details);
        
        if (toc && anchor) {
            console.log('‚úÖ TOC et Anchor trouv√©s, initialisation...');
            init();
            window.addEventListener('scroll', () => {
                onScroll();
                onScrollDetails();
            }, {passive:true});
            window.addEventListener('resize', ()=>{ 
                positionLeft(); 
                positionRight();
                onScroll(); 
                onScrollDetails();
            });
            window.addEventListener('orientationchange', ()=>{ 
                positionLeft(); 
                positionRight();
                onScroll(); 
                onScrollDetails();
            });
        } else if (attempt < 50) { // max 5 secondes
            console.log(`‚è≥ Attente des √©l√©ments... (tentative ${attempt}/50)`);
            setTimeout(() => waitForElements(attempt + 1), 100);
            } else {
            console.error('‚ùå TOC: Timeout - √©l√©ments introuvables apr√®s 5 secondes');
        }
    }
    
    // D√©marrer l'attente seulement apr√®s que le DOM soit pr√™t
    if (document.readyState === 'loading') {
        console.log('üîß TOC: DOM en cours de chargement, attente DOMContentLoaded');
        document.addEventListener('DOMContentLoaded', () => {
            console.log('üîß TOC: DOMContentLoaded d√©clench√©');
            waitForElements();
        });
    } else {
        console.log('üîß TOC: DOM d√©j√† pr√™t, d√©marrage imm√©diat');
        waitForElements();
    }
})();

