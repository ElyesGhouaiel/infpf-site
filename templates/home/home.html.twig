		@media (max-width: 480px) {
			.hero-banner {
				min-height: 90vh;
				padding: 80px 12px 15px;
			}

			.hero-content {
				margin: 0 auto;
				display: flex;
				justify-content: center;
				align-items: center;
			}

			.hero-card {
				padding: 20px;
				width: 100%;
			}

			.hero-form-container {
				padding: 20px;
			}

			.question-subtitle {
				font-size: 14px;
			}

			.cta-buttons {
			flex-direction: column;
			align-items: center;
				gap: 12px;
			}

			.hero-btn-secondary {
			width: 100%;
				max-width: 280px;
			}

			.cta-description {
				font-size: 16px;
			}

			.modern-select {
				padding: 14px 40px 14px 14px;
