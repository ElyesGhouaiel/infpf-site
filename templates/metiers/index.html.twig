{% extends 'base.html.twig' %}

{% block title %}{{ page_title }} - Institut National de la Formation Professionnelle Française{% endblock %}

{% block head %}
    <meta name="description" content="{{ meta_description }}">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="{{ url('app_metiers_index') }}">
    
    <!-- Open Graph -->
    <meta property="og:title" content="{{ page_title }} - INFPF">
    <meta property="og:description" content="{{ meta_description }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ url('app_metiers_index') }}">
    
    <!-- JSON-LD pour la page hub -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "ItemList",
        "name": "{{ page_title }}",
        "description": "{{ meta_description }}",
        "numberOfItems": {{ metiers|length }},
        "itemListElement": [
            {% for slug, metier in metiers %}
                {
                    "@type": "ListItem",
                    "position": {{ loop.index }},
                    "name": "{{ metier.title }}",
                    "description": "{{ metier.description }}",
                    "url": "{{ url('app_metiers_show', {'slug': metier.slug}) }}"
                }{% if not loop.last %},{% endif %}
            {% endfor %}
        ]
    }
    </script>
{% endblock %}

{% block body %}
<main class="site-main metiers-hub">
    <!-- Hero Section - Style École Française minimaliste -->
    <section class="hero-ef">
        <div class="container">
            <div class="hero-content">
                <div class="hero-badge">
                    <span>Transformez votre carrière</span>
                </div>
                <h1 class="hero-title">Une formation, un métier</h1>
                <p class="hero-description">
                    Découvrez notre approche ciblée : chaque formation vous prépare spécifiquement à un métier d'avenir. 
                    {{ formation_stats.total_students|number_format(0, '', ' ') }} professionnels nous font confiance.
                </p>
                
                <!-- Stats minimalistes -->
                <div class="hero-stats">
                    <div class="stat-item">
                        <span class="stat-number">{{ formation_stats.cpf_eligible }}</span>
                        <span class="stat-label">Formations CPF</span>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-item">
                        <span class="stat-number">{{ formation_stats.employment_rate }}%</span>
                        <span class="stat-label">Taux d'insertion</span>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-item">
                        <span class="stat-number">+{{ formation_stats.avg_salary_increase }}%</span>
                        <span class="stat-label">Évolution salariale</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section Métiers - Cards minimalistes -->
    <section class="metiers-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Nos formations spécialisées</h2>
                <p class="section-subtitle">
                    Chaque formation INFPF est conçue pour vous mener directement vers un métier spécifique
                </p>
            </div>

            <div class="metiers-grid">
                {% for slug, metier in metiers %}
                    <a href="{{ path('app_metiers_show', {'slug': metier.slug}) }}" class="metier-card">
                        <div class="card-header">
                            <div class="card-icon">
                                {% if metier.slug == 'commercial' %}
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                                        <circle cx="8.5" cy="7" r="4"/>
                                        <path d="M20 8v6M23 11l-3 3-3-3"/>
                                    </svg>
                                {% elseif metier.slug == 'developpeur-web' %}
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="16,18 22,12 16,6"/>
                                        <polyline points="8,6 2,12 8,18"/>
                                    </svg>
                                {% elseif metier.slug == 'trader-finance' %}
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="22,12 18,12 15,21 9,3 6,12 2,12"/>
                                    </svg>
                                {% elseif metier.slug == 'manager' %}
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                                        <circle cx="9" cy="7" r="4"/>
                                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                                        <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                                    </svg>
                                {% elseif metier.slug == 'marketing-digital' %}
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M9 12l2 2 4-4"/>
                                        <path d="M21 12c.552 0 1-.449 1-1V8a1 1 0 0 0-1-1h-3V4a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1v3H3a1 1 0 0 0-1 1v3c0 .551.448 1 1 1h3v3a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1v-3h3z"/>
                                    </svg>
                                {% elseif metier.slug == 'assistant-administratif' %}
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                                        <line x1="16" y1="2" x2="16" y2="6"/>
                                        <line x1="8" y1="2" x2="8" y2="6"/>
                                        <line x1="3" y1="10" x2="21" y2="10"/>
                                    </svg>
                                {% elseif metier.slug == 'graphiste' %}
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="3" width="18" height="14" rx="2" ry="2"/>
                                        <line x1="9" y1="9" x2="9" y2="13"/>
                                        <line x1="15" y1="9" x2="15" y2="13"/>
                                    </svg>
                                {% else %}
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"/>
                                        <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                                        <path d="M12 17h.01"/>
                                    </svg>
                                {% endif %}
                            </div>
                            <div class="formations-count">Formation spécialisée</div>
                        </div>

                        <div class="card-content">
                            <h3 class="metier-title">{{ metier.title }}</h3>
                            <p class="metier-description">{{ metier.description }}</p>
                            
                            <div class="metier-details">
                                <div class="detail-item">
                                    <span class="detail-label">Salaire</span>
                                    <span class="detail-value">{{ metier.salaire|split(' - ')[0] }}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Secteurs</span>
                                    <span class="detail-value">{{ metier.secteurs|length }}+ domaines</span>
                                </div>
                            </div>

                            <div class="metier-tags">
                                {% for secteur in metier.secteurs|slice(0, 3) %}
                                    <span class="tag">{{ secteur }}</span>
                                {% endfor %}
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="btn-discover">
                                <span>Découvrir la formation</span>
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M5 12h14M12 5l7 7-7 7"/>
                                </svg>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Section CTA finale minimaliste -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2 class="cta-title">Prêt à booster votre carrière ?</h2>
                <p class="cta-description">
                    Nos conseillers vous accompagnent pour choisir la formation idéale selon votre profil et vos objectifs.
                </p>
                <div class="cta-actions">
                    <a href="{{ path('app_contact') }}" class="btn-primary">
                        <span>Parler à un conseiller</span>
                    </a>
                    <a href="{{ path('app_home') }}" class="btn-secondary">
                        <span>Voir toutes les formations</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
/* ===== VARIABLES ÉCOLE FRANÇAISE ===== */
:root {
    --ef-primary: #1a56db;
    --ef-primary-dark: #1e40af;
    --ef-secondary: #3b82f6;
    --ef-accent: #06b6d4;
    --ef-dark: #1f2937;
    --ef-gray: #6b7280;
    --ef-gray-light: #9ca3af;
    --ef-bg-light: #f8fafc;
    --ef-bg-white: #ffffff;
    --ef-border: #e5e7eb;
    --ef-border-light: #f3f4f6;
    --ef-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    --ef-shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --ef-shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --ef-radius: 12px;
    --ef-radius-sm: 8px;
}

/* ===== BASE OPTIMISÉE ===== */
.site-main.metiers-hub {
    padding-top: 0 !important;
    margin-top: -120px !important;
    overflow-x: hidden;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
}

/* ===== HERO SECTION MINIMALISTE ===== */
.hero-ef {
    background: linear-gradient(135deg, var(--ef-primary) 0%, var(--ef-primary-dark) 100%);
    padding: 180px 0 100px 0;
    color: white;
    position: relative;
    overflow: hidden;
}

.hero-ef::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse"><path d="M 20 0 L 0 0 0 20" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
    opacity: 0.6;
}

.hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
}

.hero-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 8px 20px;
    border-radius: 25px;
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 24px;
    backdrop-filter: blur(10px);
}

.hero-title {
    font-size: 4.5rem;
    font-weight: 800;
    margin-bottom: 24px;
    line-height: 1.1;
    letter-spacing: -0.02em;
}

.hero-description {
    font-size: 1.5rem;
    line-height: 1.6;
    opacity: 0.9;
    margin-bottom: 48px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.hero-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 24px;
    margin-bottom: 24px;
}

.stat-item {
    text-align: center;
}

.stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 4px;
}

.stat-label {
    font-size: 1.125rem;
    opacity: 0.8;
}

.stat-divider {
    width: 1px;
    height: 40px;
    background: rgba(255, 255, 255, 0.2);
}

/* ===== SECTION MÉTIERS ===== */
.metiers-section {
    padding: 100px 0;
    background: var(--ef-bg-light);
}

.section-header {
    text-align: center;
    margin-bottom: 80px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
}

.section-title {
    font-size: 3rem;
    font-weight: 700;
    color: var(--ef-dark);
    margin-bottom: 16px;
    line-height: 1.2;
}

.section-subtitle {
    font-size: 1.375rem;
    color: var(--ef-gray);
    line-height: 1.6;
    margin: 0;
}

/* ===== GRID MÉTIERS MINIMALISTE ===== */
.metiers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
    gap: 32px;
}

.metier-card {
    background: var(--ef-bg-white);
    border-radius: var(--ef-radius);
    padding: 32px;
    border: 1px solid var(--ef-border-light);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    display: block;
    text-decoration: none;
    color: inherit;
}

.metier-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--ef-primary) 0%, var(--ef-accent) 100%);
    transform: scaleX(0);
    transition: transform 0.3s ease;
}

.metier-card:hover::before {
    transform: scaleX(1);
}

.metier-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--ef-shadow-lg);
    border-color: var(--ef-border);
}

/* ===== CARD HEADER ===== */
.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
}

.card-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--ef-radius-sm);
    background: linear-gradient(135deg, var(--ef-primary) 0%, var(--ef-secondary) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
}

.card-icon svg {
    width: 24px;
    height: 24px;
}

.formations-count {
    background: var(--ef-bg-light);
    color: var(--ef-gray);
    padding: 8px 16px;
    font-size: 1rem;
    border-radius: 20px;
    font-weight: 500;
}

/* ===== CARD CONTENT ===== */
.card-content {
    margin-bottom: 24px;
}

.metier-title {
    font-size: 1.875rem;
    font-weight: 600;
    color: var(--ef-dark);
    margin-bottom: 12px;
    line-height: 1.3;
}

.metier-description {
    color: var(--ef-gray);
    line-height: 1.6;
    margin-bottom: 20px;
    font-size: 1.125rem;
}

.metier-details {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
    margin-bottom: 20px;
    padding: 16px;
    background: var(--ef-bg-light);
    border-radius: var(--ef-radius-sm);
}

.detail-item {
    text-align: center;
}

.detail-label {
    display: block;
    font-size: 0.95rem;
    color: var(--ef-gray-light);
    margin-bottom: 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.detail-value {
    display: block;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--ef-dark);
}

.metier-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
}

.tag {
    background: rgba(26, 86, 219, 0.1);
    color: var(--ef-primary);
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 0.95rem;
    font-weight: 500;
}

/* ===== CARD FOOTER ===== */
.card-footer {
    padding-top: 24px;
    border-top: 1px solid var(--ef-border-light);
}

.btn-discover {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--ef-primary);
    text-decoration: none;
    font-size: 1.125rem;
    font-weight: 500;
    padding: 8px 0;
    transition: all 0.2s ease;
}

.btn-discover:hover {
    color: var(--ef-primary-dark);
    gap: 12px;
}

.btn-discover svg {
    transition: transform 0.2s ease;
}

.btn-discover:hover svg {
    transform: translateX(2px);
}

/* ===== CTA SECTION ===== */
.cta-section {
    padding: 80px 0;
    background: var(--ef-bg-white);
}

.cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
}

.cta-title {
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--ef-dark);
    margin-bottom: 16px;
    line-height: 1.2;
}

.cta-description {
    font-size: 1.125rem;
    color: var(--ef-gray);
    line-height: 1.6;
    margin-bottom: 32px;
}

.cta-actions {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
}

.btn-primary,
.btn-secondary {
    display: inline-flex;
    align-items: center;
    padding: 14px 24px;
    border-radius: var(--ef-radius-sm);
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
}

.btn-primary {
    background: var(--ef-primary);
    color: white;
    border: 2px solid var(--ef-primary);
}

.btn-primary:hover {
    background: var(--ef-primary-dark);
    border-color: var(--ef-primary-dark);
    transform: translateY(-1px);
    box-shadow: var(--ef-shadow-md);
}

.btn-secondary {
    background: transparent;
    color: var(--ef-primary);
    border: 2px solid var(--ef-primary);
}

.btn-secondary:hover {
    background: var(--ef-primary);
    color: white;
    transform: translateY(-1px);
    box-shadow: var(--ef-shadow-md);
}

/* ===== RESPONSIVE ===== */
@media (max-width: 768px) {
    .hero-ef {
        padding: 150px 0 90px 0; /* Ajustement pour tablettes */
    }
    
    .hero-title {
        font-size: 2.5rem;
    }
    
    .hero-description {
        font-size: 1.125rem;
    }
    
    .hero-stats {
        flex-direction: column;
        gap: 16px;
    }
    
    .stat-divider {
        display: none;
    }
    
    .section-title {
        font-size: 2rem;
    }
    
    .metiers-grid {
        grid-template-columns: 1fr;
        gap: 24px;
    }
    
    .metier-card {
        padding: 24px;
    }
    
    .cta-title {
        font-size: 1.875rem;
    }
    
    .cta-actions {
        flex-direction: column;
        align-items: center;
    }
    
    .btn-primary,
    .btn-secondary {
        min-width: 240px;
        justify-content: center;
    }
}

@media (max-width: 480px) {
    .hero-ef {
        padding: 160px 0 80px 0; /* Augmentation pour éviter la nav fixe */
    }
    
    .hero-title {
        font-size: 2rem;
    }
    
    .metiers-section {
        padding: 80px 0;
    }
    
    .section-header {
        margin-bottom: 60px;
    }
    
    .cta-section {
        padding: 60px 0;
    }
}
</style>
{% endblock %}