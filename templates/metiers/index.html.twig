                 <div class="benefits-header-vendeur">
                     <h3>Pourquoi choisir INFPF pour votre formation ?</h3>
                 </div>
                 <div class="benefits-grid-vendeur">
                     <div class="benefit-item-vendeur">
                         <div class="benefit-icon-vendeur">✓</div>
                         <div class="benefit-content-vendeur">
                             <h4>{{ formation_stats.employment_rate }}% de retour à l'emploi</h4>
                             <p>Nos apprenants trouvent rapidement un emploi</p>
                         </div>
                     </div>
                     <div class="benefit-item-vendeur">
                         <div class="benefit-icon-vendeur">✓</div>
                         <div class="benefit-content-vendeur">
                             <h4>Financement jusqu'à 100%</h4>
                             <p>CPF, Pôle emploi, entreprise... on vous aide</p>
                         </div>
                     </div>
                     <div class="benefit-item-vendeur">
                         <div class="benefit-icon-vendeur">✓</div>
                         <div class="benefit-content-vendeur">
                             <h4>Accompagnement personnalisé</h4>
                             <p>Un conseiller dédié de A à Z</p>
                         </div>
                     </div>
                     <div class="benefit-item-vendeur">
                         <div class="benefit-icon-vendeur">✓</div>
                         <div class="benefit-content-vendeur">
                             <h4>Certification Qualiopi</h4>
                             <p>Gage de qualité reconnu par l'État</p>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </section>

</main>

<style>
/* ===== STYLES MÉTIERS COMPACTS ET MODERNES ===== */

/* Variables reprises de la home */
:root {
    --primary-gradient: linear-gradient(135deg, #0b3f89 0%, #1e5cb8 50%, #00b4d8 100%);
    --primary-blue: #0b3f89;
    --secondary-blue: #1e5cb8;
    --accent-blue: #00b4d8;
    --text-dark: #1a202c;
    --text-gray: #4a5568;
    --background-light: #f8fafc;
    --success-green: #10b981;
    --warning-orange: #f59e0b;
    --premium-gold: #fbbf24;
}

/* Base - SUPPRESSION FORCÉE du padding-top pour cette page */
main.site-main {
    padding-top: 0 !important; /* FORCE la suppression du padding-top */
    margin-top: 0 !important; /* Supprime aussi toute marge */
    overflow-x: hidden;
}

/* FORCE aussi sur le body si nécessaire */
body main.site-main {
    padding-top: 0 !important;
    margin-top: 0 !important;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* ===== HERO SECTION COMPACTE AVEC TRANSPARENCE ===== */
.hero-banner {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 20px;
    overflow: hidden;
    margin-top: -120px !important; /* FORCE le hero à remonter plus haut */
    padding-top: 120px !important; /* Compense avec plus d'espace */
}

.hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--primary-gradient);
    z-index: 1;
}

.hero-gradient {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
        rgba(11, 63, 137, 0.9) 0%, 
        rgba(30, 92, 184, 0.8) 50%, 
        rgba(0, 180, 216, 0.7) 100%
    );
    z-index: 2;
}

.hero-background::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
    z-index: 3;
}

.hero-content {
    position: relative;
    z-index: 4;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
}

.hero-card {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 24px;
    padding: 60px 50px;
    text-align: center;
    color: white;
    max-width: 800px;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
}

.hero-icon {
    color: white;
    margin-bottom: 30px;
}

.hero-title {
    font-size: 5.5rem;
    font-weight: 800;
    margin-bottom: 2.5rem;
    line-height: 1.1;
    color: white;
    text-shadow: 0 4px 8px rgba(0,0,0,0.3);
}

.hero-description {
    font-size: 2rem;
    line-height: 1.6;
    margin-bottom: 3rem;
    opacity: 0.95;
}

.hero-stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-top: 2rem;
}

.stat-box {
    text-align: center;
    padding: 25px 20px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 18px;
    border: 1px solid rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(10px);
}

.stat-number {
    display: block;
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 8px;
}

.stat-label {
    font-size: 1.4rem;
    opacity: 0.9;
}

/* ===== SECTION MÉTIERS COLLÉE DIRECTEMENT ===== */
.metiers-section {
    padding: 0 0 100px; /* SUPPRIME complètement le padding top */
    background: var(--background-light);
    margin-top: 0; /* Supprime toute marge */
}

.section-header {
    text-align: center;
    margin-bottom: 60px; /* Réduit l'espacement */
    padding-top: 80px; /* Ajoute le padding ici au lieu de sur la section */
}

.section-title {
    font-size: 4.5rem; /* Augmente la taille */
    font-weight: 800;
    color: var(--text-dark);
    margin-bottom: 2rem;
    line-height: 1.2;
}

.section-subtitle {
    font-size: 1.8rem; /* Augmente la taille */
    color: var(--text-gray);
    max-width: 900px;
    margin: 0 auto;
    line-height: 1.6;
}

/* ===== GRID VENDEUR MODERNE ===== */
/* GRID VENDEUR MODERNE - DESKTOP PLUS LARGE */
.metiers-grid-vendeur {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(420px, 1fr));
    gap: 40px;
    margin-bottom: 80px;
    max-width: 1400px; /* Plus large sur desktop */
