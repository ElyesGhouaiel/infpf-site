.metier-card-vendeur:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px rgba(11, 63, 137, 0.15);
    border-color: var(--primary-blue);
}

/* Section image/icône */
.card-image-section {
    position: relative;
    background: var(--primary-gradient);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    padding: 40px 30px;
