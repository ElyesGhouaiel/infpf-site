{% extends 'base.html.twig' %}

{% block title %}{{ page_title }} - Institut National de la Formation Professionnelle Française{% endblock %}

{% block head %}
    <meta name="description" content="{{ meta_description }}">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="{{ url('app_metiers_index') }}">
    
    <!-- Open Graph -->
    <meta property="og:title" content="{{ page_title }} - INFPF">
    <meta property="og:description" content="{{ meta_description }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ url('app_metiers_index') }}">
    
    <!-- JSON-LD pour la page hub -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "ItemList",
        "name": "{{ page_title }}",
        "description": "{{ meta_description }}",
        "numberOfItems": {{ metiers|length }},
        "itemListElement": [
            {% for slug, metier in metiers %}
                {
                    "@type": "ListItem",
                    "position": {{ loop.index }},
                    "name": "{{ metier.title }}",
                    "description": "{{ metier.description }}",
                    "url": "{{ url('app_metiers_show', {'slug': metier.slug}) }}"
                }{% if not loop.last %},{% endif %}
            {% endfor %}
        ]
    }
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
{% endblock %}

{% block body %}
<main class="site-main">
    <!-- Hero Section compact avec transparence -->
    <section class="hero-banner">
        <div class="hero-background"></div>
        <div class="hero-gradient"></div>
        <div class="container hero-content">
            <div class="hero-card" data-aos="fade-up" data-aos-duration="1000">
                <div class="hero-icon">
                    <svg width="80" height="80" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2L15.09 8.26L22 9L17 14.74L18.18 21.02L12 17.77L5.82 21.02L7 14.74L2 9L8.91 8.26L12 2Z"/>
                    </svg>
                </div>
                  <h1 class="hero-title">Transformez votre carrière en 2025</h1>
                     <p class="hero-description">
                       <strong>Stop aux petits salaires !</strong> Rejoignez {{ formation_stats.total_students|number_format(0, '', ' ') }} professionnels qui ont boosté leur carrière avec nos formations certifiées. 
                       <strong>{{ formation_stats.cpf_eligible }} formations éligibles CPF</strong> - Financement jusqu'à 100%.
                     </p>
                     <div class="hero-stats-grid">
                         <div class="stat-box">
                           <span class="stat-number">+{{ formation_stats.avg_salary_increase }}%</span>
                           <span class="stat-label">Augmentation de salaire</span>
                         </div>
                         <div class="stat-box">
                           <span class="stat-number">{{ formation_stats.employment_rate }}%</span>
                           <span class="stat-label">Évolution garantie</span>
                         </div>
                         <div class="stat-box">
                           <span class="stat-number">{{ formation_stats.cpf_eligible }}</span>
                           <span class="stat-label">Formations CPF</span>
                         </div>
                         <div class="stat-box">
                           <span class="stat-number">{{ formation_stats.companies_partners }}+</span>
                           <span class="stat-label">Entreprises partenaires</span>
                         </div>
                     </div>
            </div>
        </div>
    </section>

    <!-- Section métiers DIRECTEMENT collée sans séparation -->
