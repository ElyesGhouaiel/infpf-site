                             <div class="card-badge-vendeur">{{ metier.formations_count }} formation{% if metier.formations_count > 1 %}s{% endif %}</div>
                         </div>
                        
                         
                         <div class="card-content-vendeur">
                              <h3 class="metier-title-vendeur">{{ metier.title }}</h3>
                              <div class="salary-highlight">Salaire : {{ metier.salaire }}</div>
                              <p class="metier-description-vendeur">{{ metier.description|slice(0, 130) }}...</p>
                              
                              <div class="benefits-quick">
                                  <div class="benefit-item">
                                      <span class="benefit-icon">▶</span>
                                      <span>{{ metier.secteurs|length }} secteurs qui recrutent</span>
                                  </div>
                                  <div class="benefit-item">
                                      <span class="benefit-icon">✓</span>
                                      <span>Formation courte et efficace</span>
                                  </div>
                              </div>
                             
                             <div class="secteurs-pills-vendeur">
                                 {% for secteur in metier.secteurs|slice(0, 2) %}
                                     <span class="secteur-pill-vendeur">{{ secteur }}</span>
                                 {% endfor %}
                                 {% if metier.secteurs|length > 2 %}
                                     <span class="secteur-pill-more-vendeur">+{{ metier.secteurs|length - 2 }}</span>
                                 {% endif %}
                             </div>
                         </div>
                         
                          <div class="card-footer-vendeur">
