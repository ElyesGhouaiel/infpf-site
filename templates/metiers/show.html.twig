<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    // AOS désactivé pour améliorer les performances de scroll
    // AOS.init({
    //     duration: 800,
    //     once: true,
    //     offset: 100,
    //     easing: 'ease-out-cubic'
    // });
    
    // Smooth scroll pour le bouton "Découvrir nos formations"
    document.addEventListener('DOMContentLoaded', function() {
        const btnHero = document.querySelector('.btn-hero-primary-ef[href="#formations"]');
        if (btnHero) {
            btnHero.addEventListener('click', function(e) {
                e.preventDefault();
                document.querySelector('#formations').scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            });
        }
    });

    // Fonction pour afficher/masquer les autres formations
    function toggleOtherFormations() {
        const section = document.getElementById('other-formations-section');
        const button = document.getElementById('btn-toggle-formations');
        const buttonAction = button.querySelector('.btn-discover-action-ef');
        const buttonDetail = button.querySelector('.btn-discover-detail-ef');
        const buttonArrow = button.querySelector('.btn-discover-arrow-ef');
        
        // Récupérer le nombre de formations depuis le badge
        const countBadge = button.querySelector('.btn-discover-count-ef');
        const formationCount = countBadge ? countBadge.textContent : '1';
        const isPlural = parseInt(formationCount) > 1;
        
        if (section.style.display === 'none' || section.style.display === '') {
            // Afficher les formations
            section.style.display = 'block';
            section.style.animation = 'slideDown 0.5s ease-out';
            
            // Changer le texte du bouton
            buttonAction.textContent = 'Masquer les formations';
            buttonDetail.textContent = 'Réduire la liste';
            button.classList.add('active');
            
            // Scroll vers la section avec un délai pour l'animation
            setTimeout(() => {
                section.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }, 200);
        } else {
            // Masquer les formations
            section.style.animation = 'slideUp 0.3s ease-in';
            setTimeout(() => {
                section.style.display = 'none';
                // Restaurer le texte original
                buttonAction.textContent = `Découvrir ${isPlural ? 'les autres formations' : 'l\'autre formation'}`;
                buttonDetail.textContent = 'Pour ce métier';
                button.classList.remove('active');
            }, 300);
        }
    }

    // Fonction scroll vers le haut
    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }

    // Afficher/masquer le bouton selon la position de scroll
    window.addEventListener('scroll', function() {
        const backToTopBtn = document.getElementById('back-to-top-btn');
        if (window.pageYOffset > 300) {
            backToTopBtn.style.display = 'flex';
        } else {
            backToTopBtn.style.display = 'none';
        }
    });
</script>

