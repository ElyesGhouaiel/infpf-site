{% extends 'base.html.twig' %}

{% block title %}{{ page_title }} - Institut National de la Formation Professionnelle Française{% endblock %}

{% block head %}
    <meta name="description" content="{{ meta_description }}">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="{{ url('app_metiers_show', {'slug': metier.slug}) }}">
    
    <!-- Open Graph -->
    <meta property="og:title" content="{{ page_title }} - INFPF">
    <meta property="og:description" content="{{ meta_description }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ url('app_metiers_show', {'slug': metier.slug}) }}">
    
    <!-- JSON-LD Schema -->
    {% if json_ld %}
        <script type="application/ld+json">
            {{ json_ld|json_encode|raw }}
        </script>
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}
<main class="site-main metier-page-ef">
    <!-- Hero avec bouton retour intégré -->
    <section class="hero-metier-ef">
        <div class="hero-background-ef"></div>
        <div class="container">
            <!-- Bouton retour - Position corrigée -->
            <div class="back-navigation-ef">
                <a href="{{ path('app_metiers_index') }}" class="btn-back-ef">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"/>
                    </svg>
                    <span>Tous les métiers</span>
                </a>
            </div>
            
            <div class="hero-content-ef">
                <div class="hero-icon-ef">
                    {% if metier.slug == 'commercial' %}
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M16,2A3,3 0 0,1 19,5V19A3,3 0 0,1 16,22H8A3,3 0 0,1 5,19V5A3,3 0 0,1 8,2H16M16,4H8A1,1 0 0,0 7,5V19A1,1 0 0,0 8,20H16A1,1 0 0,0 17,19V5A1,1 0 0,0 16,4M12,6A2,2 0 0,1 14,8A2,2 0 0,1 12,10A2,2 0 0,1 10,8A2,2 0 0,1 12,6M8,16V14C8,12.67 10.67,12 12,12C13.33,12 16,12.67 16,14V16H8Z"/>
                        </svg>
                    {% elseif metier.slug == 'developpeur-web' %}
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M14.6,16.6L19.2,12L14.6,7.4L16,6L22,12L16,18L14.6,16.6M9.4,16.6L4.8,12L9.4,7.4L8,6L2,12L8,18L9.4,16.6Z"/>
                        </svg>
                    {% elseif metier.slug == 'trader' %}
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M16,6L18.29,8.29L13.41,13.17L9.41,9.17L2,16.59L3.41,18L9.41,12L13.41,16L19.71,9.71L22,12V6H16Z"/>
                        </svg>
                    {% elseif metier.slug == 'manager-equipe' %}
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12,5.5A3.5,3.5 0 0,1 15.5,9A3.5,3.5 0 0,1 12,12.5A3.5,3.5 0 0,1 8.5,9A3.5,3.5 0 0,1 12,5.5M5,8C5.56,8 6.08,8.15 6.53,8.42C6.38,9.85 6.8,11.27 7.66,12.38C7.16,13.34 6.16,14 5,14A3,3 0 0,1 2,11A3,3 0 0,1 5,8M19,8A3,3 0 0,1 22,11A3,3 0 0,1 19,14C17.84,14 16.84,13.34 16.34,12.38C17.2,11.27 17.62,9.85 17.47,8.42C17.92,8.15 18.44,8 19,8M5.5,18.25C5.5,16.18 8.41,14.5 12,14.5C15.59,14.5 18.5,16.18 18.5,18.25V20H5.5V18.25M0,20V18.5C0,17.11 1.89,15.94 4.45,15.6C3.86,16.28 3.5,17.22 3.5,18.25V20H0M24,20H20.5V18.25C20.5,17.22 20.14,16.28 19.55,15.6C22.11,15.94 24,17.11 24,18.5V20Z"/>
                        </svg>
                    {% elseif metier.slug == 'marketing-digital' %}
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M11.5,1L2,6V8H21V6M16,10V17H19V19H5V17H8V10H10V17H14V10"/>
                        </svg>
                    {% elseif metier.slug == 'assistant-administratif' %}
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M7,2V4H17V2H19V4H20A2,2 0 0,1 22,6V20A2,2 0 0,1 20,22H4A2,2 0 0,1 2,20V6A2,2 0 0,1 4,4H5V2H7M4,8V20H20V8H4M6,10H8V12H6V10M10,10H12V12H10V10M14,10H16V12H14V10M18,10H20V12H18V10M6,14H8V16H6V14M10,14H12V16H10V14M14,14H16V16H14V14M6,18H8V20H6V18M10,18H12V20H10V18"/>
                        </svg>
                    {% elseif metier.slug == 'graphiste-designer' %}
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M5,6H23V18H5V6M14,9A3,3 0 0,1 17,12A3,3 0 0,1 14,15A3,3 0 0,1 11,12A3,3 0 0,1 14,9M9,8A2,2 0 0,1 7,10V14A2,2 0 0,1 9,16A2,2 0 0,1 11,14V10A2,2 0 0,1 9,8M1,10H3V14H1V10Z"/>
                        </svg>
                    {% else %}
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M20,6H4V4A2,2 0 0,1 6,2H18A2,2 0 0,1 20,4V6M20,8V19A2,2 0 0,1 18,21H6A2,2 0 0,1 4,19V8H20M6,10V12H18V10H6Z"/>
                        </svg>
                    {% endif %}
                </div>
                
                <h1 class="hero-title-ef">{{ metier.title }}</h1>
                <div class="hero-formation-highlight">
                    <span class="highlight-badge">Objectif Carriere</span>
                <p class="hero-description-ef">{{ metier.description }}</p>
                </div>
                
                <!-- Stats horizontales -->
                <div class="hero-stats-ef">
                    <div class="stat-ef">
                        <span class="stat-number-ef">{{ formations_count }}</span>
                        <span class="stat-label-ef">Formation{{ formations_count > 1 ? 's' : '' }} disponible{{ formations_count > 1 ? 's' : '' }}</span>
                    </div>
                    <div class="stat-ef">
                        <span class="stat-number-ef">{{ metier.salaire|split(' - ')[0] }}</span>
                        <span class="stat-label-ef">Salaire moyen</span>
                    </div>
                    <div class="stat-ef">
                        <span class="stat-number-ef">{{ metier.secteurs|length }}+</span>
                        <span class="stat-label-ef">Secteur{{ metier.secteurs|length > 1 ? 's' : '' }} qui recrutent</span>
                    </div>
                </div>
                
                <div class="hero-cta-ef">
                    <a href="#formations" class="btn-hero-primary-ef">
                        <span>Choisir ma formation</span>
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Section présentation métier -->
    <section class="presentation-metier-ef">
        <div class="container">
            <div class="presentation-header-ef">
                <h2 class="section-title-ef">Pourquoi choisir le métier de {{ metier.title|replace({'Devenir ': ''})|lower }} ?</h2>
                <p class="section-subtitle-ef">
                    Un secteur en pleine croissance avec de nombreuses opportunités d'évolution et des perspectives salariales attractives.
                </p>
            </div>
            
            <!-- Benefits en ligne horizontale -->
            <div class="benefits-grid-ef">
                <div class="benefit-card-ef">
                    <div class="benefit-icon-ef">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M7,15H9C9,16.08 10.37,17 12,17C13.63,17 15,16.08 15,15C15,13.9 13.96,13.5 11.76,12.97C9.64,12.44 7,11.78 7,9C7,7.21 8.47,5.69 10.5,5.18V3H13.5V5.18C15.53,5.69 17,7.21 17,9H15C15,7.92 13.63,7 12,7C10.37,7 9,7.92 9,9C9,10.1 10.04,10.5 12.24,11.03C14.36,11.56 17,12.22 17,15C17,16.79 15.53,18.31 13.5,18.82V21H10.5V18.82C8.47,18.31 7,16.79 7,15Z"/>
                        </svg>
                    </div>
                    <h4>Rémunération attractive</h4>
                    <p>{{ metier.salaire }}</p>
                </div>
                <div class="benefit-card-ef">
                    <div class="benefit-icon-ef">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M16,6L18.29,8.29L13.41,13.17L9.41,9.17L2,16.59L3.41,18L9.41,12L13.41,16L19.71,9.71L22,12V6H16Z"/>
                        </svg>
                    </div>
                    <h4>Évolution rapide</h4>
                    <p>{{ metier.evolution }}</p>
                </div>
                <div class="benefit-card-ef">
                    <div class="benefit-icon-ef">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M11,16.5L6.5,12L7.91,10.59L11,13.67L16.59,8.09L18,9.5L11,16.5Z"/>
                        </svg>
                    </div>
                    <h4>Secteurs porteurs</h4>
                    <p>{{ metier.secteurs|length }} secteurs dynamiques qui recrutent activement</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Section Profil Professionnel - Design moderne et épuré -->
    <section class="professional-profile">
        <div class="container">
            <div class="profile-header">
                <div class="header-badge">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12,2L13.09,8.26L22,9L13.09,9.74L12,16L10.91,9.74L2,9L10.91,8.26L12,2Z"/>
                    </svg>
                    <span>Profil professionnel</span>
                </div>
                <h2>Ce que vous ferez au quotidien</h2>
            </div>

            <div class="profile-content">
                <!-- Missions avec design moderne -->
                <div class="missions-section">
                    <div class="section-title">
                        <div class="title-icon primary">
                            <svg viewBox="0 0 24 24" fill="currentColor">
                                <path d="M19,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V5H19V19Z"/>
                                <path d="M7,7V9H17V7H7M7,11V13H17V11H7M7,15V17H14V15H7Z"/>
                            </svg>
                        </div>
                        <h3>Missions principales</h3>
                    </div>
                    <div class="missions-tags">
                        {% for mission in metier.missions %}
                            <span class="mission-tag">{{ mission }}</span>
                        {% endfor %}
                    </div>
                </div>

                <!-- Compétences avec tags modernes -->
                <div class="skills-section">
                    <div class="section-title">
                        <div class="title-icon secondary">
                            <svg viewBox="0 0 24 24" fill="currentColor">
                                <path d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"/>
                            </svg>
                        </div>
                        <h3>Compétences développées</h3>
                    </div>
                    <div class="skills-tags">
                        {% for competence in metier.competences %}
                            <span class="skill-tag">{{ competence }}</span>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Formations -->
    <section class="formations-ef" id="formations">
        <div class="container">
            <div class="formations-header-ef">
                <h2 class="section-title-ef">La formation pour {{ metier.title|replace({'Devenir ': ''})|lower }}</h2>
                <p class="section-subtitle-ef">
                    Une formation spécialement conçue pour vous préparer à ce métier d'avenir
                </p>
            </div>
            
            <div class="formation-single-ef">
                <article class="formation-card-ef formation-highlighted-ef">
                        <div class="card-header-ef">
                            {% if formation.category %}
                                <span class="formation-category-ef">{{ formation.category.name }}</span>
                            {% endif %}
                        <div class="formation-badge-ef">Formation Recommandee</div>
                            <h3 class="formation-title-ef">
                                    {{ formation.nameFormation }}
                            </h3>
                        </div>
                        
                        <div class="card-content-ef">
                            {% if formation.phraseOne %}
                                <p class="formation-excerpt-ef">{{ formation.phraseOne }}</p>
                            {% elseif formation.descriptionFormation %}
                            <p class="formation-excerpt-ef">{{ formation.descriptionFormation }}</p>
                            {% endif %}

                        <div class="metier-alignment-ef">
                            <div class="alignment-title-ef">Cette formation vous prépare directement au métier de :</div>
                            <div class="target-metier-ef">{{ metier.title|replace({'Devenir ': ''}) }}</div>
                        </div>
                        </div>
                        
                        <div class="card-meta-ef">
                            {% if formation.dureeFormation %}
                                <div class="meta-item-ef">
                                    <svg viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z"/>
                                    </svg>
                                    <span>{{ formation.dureeFormation }}</span>
                                </div>
                            {% endif %}
                            
                            {% if formation.niveau %}
                                <div class="meta-item-ef">
                                    <svg viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M16,6L18.29,8.29L13.41,13.17L9.41,9.17L2,16.59L3.41,18L9.41,12L13.41,16L19.71,9.71L22,12V6H16Z"/>
                                    </svg>
                                    <span>{{ formation.niveau }}</span>
                                </div>
                            {% endif %}

                        {% if metier.salaire %}
                            <div class="meta-item-ef">
                                <svg viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M7,15H9C9,16.08 10.37,17 12,17C13.63,17 15,16.08 15,15C15,13.9 13.96,13.5 11.76,12.97C9.64,12.44 7,11.78 7,9C7,7.21 8.47,5.69 10.5,5.18V3H13.5V5.18C15.53,5.69 17,7.21 17,9H15C15,7.92 13.63,7 12,7C10.37,7 9,7.92 9,9C9,10.1 10.04,10.5 12.24,11.03C14.36,11.56 17,12.22 17,15C17,16.79 15.53,18.31 13.5,18.82V21H10.5V18.82C8.47,18.31 7,16.79 7,15Z"/>
                                </svg>
                                <span>Salaire : {{ metier.salaire }}</span>
                                </div>
                            {% endif %}
                        </div>
                        
                        {% if formation.priceFormation %}
                            <div class="card-price-ef">
                                <span class="price-amount-ef">{{ formation.priceFormation }}€</span>
                                <span class="price-note-ef">Éligible CPF</span>
                            </div>
                        {% endif %}
                        
                    <div class="card-actions-ef card-actions-highlighted-ef">
                            <a href="{{ path('app_formation_show', {'id': formation.id}) }}" 
                           class="btn-formation-ef btn-formation-primary-ef">
                            <span>Commencer cette formation</span>
                        </a>
                    </div>
                </article>
            </div>

            <!-- Bouton centré pour voir d'autres formations -->
            {% if other_formations_count >= 2 %}
            <div style="display: flex; justify-content: center; width: 100%; margin: 40px 0; padding: 0 20px; box-sizing: border-box;">
            <div class="other-formations-discover-ef">
                <div class="discover-content-ef">
                    <h3 class="discover-title-ef">Élargissez vos compétences</h3>
                    <p class="discover-subtitle-ef">
                        {{ other_formations_count }} formations complémentaires pour enrichir votre profil professionnel en {{ metier.title|replace({'Devenir ': ''})|lower }}
                    </p>
                    <button onclick="toggleOtherFormations()" class="btn-discover-formations-ef" id="btn-toggle-formations">
                        <div class="btn-discover-icon-wrapper-ef">
                            <svg viewBox="0 0 24 24" fill="currentColor" class="other-formations-icon-ef">
                                <path d="M12,2C13.1,2 14,2.9 14,4C14,5.1 13.1,6 12,6C10.9,6 10,5.1 10,4C10,2.9 10.9,2 12,2M21,9V7L15,1H5C3.89,1 3,1.89 3,3V21A2,2 0 0,0 5,23H19A2,2 0 0,0 21,21V9M12,18.5L9.5,16L10.91,14.59L12,15.67L13.09,14.59L14.5,16L12,18.5Z"/>
                            </svg>
                            <span class="btn-discover-count-ef">{{ other_formations_count }}</span>
                        </div>
                        <div class="btn-discover-text-ef">
                            <span class="btn-discover-action-ef">Découvrir les formations complémentaires</span>
                            <span class="btn-discover-detail-ef">{{ other_formations_count }} options disponibles</span>
                        </div>
                        <svg viewBox="0 0 24 24" fill="currentColor" class="btn-discover-arrow-ef">
                            <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"/>
                        </svg>
                    </button>
                </div>
            </div>
            </div>
            {% endif %}

            <!-- Section des autres formations (masquée par défaut) -->
            <div class="other-formations-grid-ef" id="other-formations-section" style="display: none;">
                <div class="container">
                    <div class="other-formations-header-ef">
                        <h3 class="other-formations-title-ef">Formations complémentaires</h3>
                        <p style="color: #6b7280; font-size: 16px; margin: 8px 0 0 0; font-weight: 400;">Enrichissez votre profil professionnel avec ces formations spécialisées</p>
                    </div>
                    <div class="formations-grid-ef">
                    {% for otherFormation in other_formations %}
                        <article class="formation-card-ef">
                            <div class="card-header-ef">
                                {% if otherFormation.category %}
                                    <span class="formation-category-ef">{{ otherFormation.category.name }}</span>
                                {% endif %}
                                <h3 class="formation-title-ef">
                                    {{ otherFormation.nameFormation }}
                                </h3>
                            </div>
                            
                            <div class="card-content-ef">
                                {% if otherFormation.phraseOne %}
                                    <p class="formation-excerpt-ef">{{ otherFormation.phraseOne|slice(0, 120) }}{% if otherFormation.phraseOne|length > 120 %}...{% endif %}</p>
                                {% elseif otherFormation.descriptionFormation %}
                                    <p class="formation-excerpt-ef">{{ otherFormation.descriptionFormation|slice(0, 120) }}{% if otherFormation.descriptionFormation|length > 120 %}...{% endif %}</p>
                                {% endif %}
                            </div>
                            
                            <div class="card-meta-ef">
                                {% if otherFormation.dureeFormation %}
                                    <div class="meta-item-ef">
                                        <svg viewBox="0 0 24 24" fill="currentColor">
                                            <path d="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z"/>
                                        </svg>
                                        <span>{{ otherFormation.dureeFormation }}</span>
                                    </div>
                                {% endif %}
                                
                                {% if otherFormation.niveau %}
                                    <div class="meta-item-ef">
                                        <svg viewBox="0 0 24 24" fill="currentColor">
                                            <path d="M16,6L18.29,8.29L13.41,13.17L9.41,9.17L2,16.59L3.41,18L9.41,12L13.41,16L19.71,9.71L22,12V6H16Z"/>
                                        </svg>
                                        <span>{{ otherFormation.niveau }}</span>
                                    </div>
                                {% endif %}
                            </div>
                            
                            {% if otherFormation.priceFormation %}
                                <div class="card-price-ef">
                                    <span class="price-amount-ef">{{ otherFormation.priceFormation }}€</span>
                                    <span class="price-note-ef">Éligible CPF</span>
                                </div>
                            {% endif %}
                            
                            <div class="card-actions-ef">
                                <a href="{{ path('app_formation_show', {'id': otherFormation.id}) }}" 
                                   class="btn-formation-ef btn-formation-secondary-ef">
                                    <span>Découvrir cette formation</span>
                            </a>
                        </div>
                    </article>
                {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA final -->
    <section class="cta-final-ef">
        <div class="container">
            <div class="cta-content-ef">
                <h2 class="cta-title-ef">Lancez votre carriere des maintenant !</h2>
                <p class="cta-description-ef">
                    Nos conseillers vous accompagnent personnellement pour choisir la formation parfaite et vous ouvrir les portes de {{ metier.title|replace({'Devenir ': ''})|lower }}
                </p>
                <div class="cta-actions-ef">
                    <a href="{{ path('app_contact') }}" class="btn-cta-primary-ef">
                        <span>Conseil gratuit immediat</span>
                    </a>
                    <a href="{{ path('app_home') }}" class="btn-cta-secondary-ef">
                        <span>Voir toutes nos formations</span>
                    </a>
                </div>
                <div class="cta-garantees-ef">
                    <div class="garantee-item-ef">
                        <svg viewBox="0 0 24 24" fill="currentColor">
